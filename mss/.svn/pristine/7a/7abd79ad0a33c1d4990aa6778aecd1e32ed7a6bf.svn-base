	</gauce>
	
	<!-- 화면 로딩시 카드사	정보 조회 -->
	<query name="SEL_CARD_COMBO">
		<![CDATA[
		SELECT DISTINCT    
               A.STR_CD
             , B.CARD_COMP AS CODE
             , C.CCOMP_NM  AS NAME
          FROM MSS.MC_EVTMST A,    MSS.MC_CARDCOMP    B, DPS.PD_CARDCOMP C, DPS.PC_STREVT    D, DPS.PC_EVTMST E
        WHERE A.STR_CD = B.STR_CD
          AND A.EVENT_CD = B.EVENT_CD
          AND A.EVENT_CD = E.EVENT_CD
          AND B.CARD_COMP =    C.CCOMP_CD
          AND A.STR_CD = D.STR_CD
          AND A.EVENT_CD = D.EVENT_CD
          AND A.EVENT_TYPE = '02'
          AND A.STR_CD = ?
          AND ?    BETWEEN    D.EVENT_S_DT AND D.EVENT_E_DT
          AND E.EVENT_NAME LIKE '%제휴%'
       ORDER BY    B.CARD_COMP
       
       
		]]>
	</query>

	<!-- 행사 정보 조회	 -->
	<query name="SEL_EVENT_INFO">
		<![CDATA[
        SELECT A.STR_CD
             , A.EVENT_CD
             , E.EVENT_NAME
             , A.EVENT_TYPE
             , COM.FN_GET_COMM_NAME('D','M002',A.EVENT_TYPE)     AS EVENT_TYPE_NM
             , D.EVENT_S_DT
             , D.EVENT_E_DT
             , COM.FN_GET_COMM_NAME('D','M201',A.EVENT_GIFT_CYC) AS EVENT_GIFT_CYC --사은품지급주기
             , COM.FN_GET_COMM_NAME('D','M202',A.RECP_ADD_YN)    AS RECP_ADD_YN    --영수증합산
             , COM.FN_GET_COMM_NAME('D','M203',A.RECP_TODAY_YN)  AS RECP_TODAY_YN  --영수증당일여부
             , A.RECP_ADD_YN AS RECP_YN
			 , A.EVENT_GIFT_CYC AS CYC_DPN
			 , A.RECP_TODAY_YN AS TODAY_YN
          FROM MSS.MC_EVTMST A
             , MSS.MC_CARDCOMP B
             , DPS.PD_CARDCOMP C
             , DPS.PC_STREVT D
             , DPS.PC_EVTMST E
             , COM.TC_COMMCODE F
        WHERE A.STR_CD		= B.STR_CD
          AND A.EVENT_CD	= B.EVENT_CD
          AND B.CARD_COMP	= C.CCOMP_CD
          AND A.STR_CD		= D.STR_CD
          AND A.EVENT_CD	= D.EVENT_CD
          AND A.EVENT_CD	= E.EVENT_CD
          AND A.EVENT_TYPE	= '02'
          AND A.STR_CD		= ?
          AND ? BETWEEN D.EVENT_S_DT AND D.EVENT_E_DT
          AND B.CARD_COMP   = ?               
          AND F.COMM_PART   = 'P072'
          AND F.COMM_CODE   = E.EVENT_TYPE
          AND E.EVENT_NAME LIKE '%제휴%'
          ORDER BY EVENT_S_DT DESC
		]]>
	</query>

	<!-- 영수증	정보 조회전	매출정보 유무 확인 -->
	<query name="SEL_SALECHK">
		<![CDATA[
		SELECT COUNT(*)	AS CNT 
		  FROM DPS.PS_TRHEADER
		 WHERE STR_CD =	?
		   AND SALE_DT = ?
		   AND POS_NO =?
		   AND TRAN_NO = ?
		]]>
	</query>
	
	<!-- 전점 행사 여부	체크 -->
	<query name="SEL_CHK_ALLBRAND">
		<![CDATA[
		SELECT SUM(PUMBUN_CD) AS PUMBUN_CD
		  FROM (SELECT DECODE(PUMBUN_CD, '******', 0 , 1) AS PUMBUN_CD 
				  FROM MSS.MC_EVTPUMBUN	
				 WHERE STR_CD =	? 
				   AND EVENT_CD	= ?) 
		]]>
	</query>

	<!-- 영수증	정보 조회 -->
	<query name="SEL_SALE_INFO">
		<![CDATA[
		SELECT --DECODE(PRSNT.SEQ_NO,'','T','F') AS CHK
		       'T' AS	CHK -- 기본 지급 미체크
			 , DECODE(PRSNT.SEQ_NO,'','미지급','지급') AS PROVIDE_GB_NM
			 , DECODE(PRSNT.SEQ_NO,'','0','1') AS PROVIDE_GB
			 , SALE.STR_CD
			 , SALE.SALE_DT
			 , SALE.POS_NO
			 , SALE.TRAN_NO
			 , SUM(SALE.SALE_AMT) AS TOT_SALE_AMT
			 , SUM(SALE.APP_RATE_AMT) AS SALE_AMT
			 , 0 AS	DIV_AMT
			 , (SELECT CUST_NO 
					FROM DPS.PS_TRHEADER
				   WHERE STR_CD  = SALE.STR_CD 
				     AND SALE_DT = SALE.SALE_DT 
				     AND POS_NO  = SALE.POS_NO 
				     AND TRAN_NO = SALE.TRAN_NO) AS CUST_NO
			   , SALE.CARD_DATA
			   , (SELECT	NVL2(MIN(A.PRSNT_DT),'Y','N')
				    FROM	MSS.MC_EVTSKUPRSNT A
				  WHERE	A.PRSNT_FLAG IN	('1','2')
					AND	A.CANCEL_GB	= '1'
					AND	A.STR_CD IN ( ?, ?)
					AND	A.EVENT_CD = ?
					AND	A.CARD_DATA IN
						   (SELECT CARD_DATA
							  FROM DPS.PS_DISCARD
							 WHERE STR_CD =	?
							   AND SALE_DT = ?
							   AND POS_NO =	?
							   AND TRAN_NO = ?
							   --AND DECODE(CARD_PUBLISH,'10','05','20','09',CARD_PUBLISH)	= 
							   AND CARD_FLAG = '10'
							   AND CARD_PURCHASE = ?  --20150317_마케팅팀 김미리사원 요청 카드사은행사 기준을 발급사에서 매입사로 변경
							 GROUP BY STR_CD, SALE_DT, POS_NO, TRAN_NO, CARD_DATA)
					AND A.PRSNT_DT <= TO_CHAR(SYSDATE,'YYYYMMDD')
					AND A.PRSNT_DT >= ( SELECT CASE WHEN A.EVENT_GIFT_CYC = 'P' THEN B.EVENT_S_DT  
					                                WHEN A.EVENT_GIFT_CYC = 'D' THEN TO_CHAR(SYSDATE,'YYYYMMDD')
					                                ELSE TO_CHAR(SYSDATE,'YYYYMMDD') END
					                      FROM MSS.MC_EVTMST A
					                         , DPS.PC_STREVT B
					                     WHERE A.STR_CD = ?
					                       AND A.EVENT_CD = ?
					                       AND A.STR_CD = B.STR_CD
					                       AND A.EVENT_CD = B.EVENT_CD )  	 
				 )					     
		  FROM 
			 (SELECT A.STR_CD 
				   , A.SALE_DT
				   , A.POS_NO
				   , A.TRAN_NO
				   , A.NET_SALE_AMT_TAX	AS SALE_AMT
				   , B.CARD_DATA				 
				   , CASE WHEN PSALE_AMT > PAY_AMT THEN	PAY_AMT
						  WHEN PSALE_AMT = PAY_AMT THEN	PAY_AMT
						  WHEN PSALE_AMT < PAY_AMT THEN	PSALE_AMT  END AS APP_RATE_AMT
				FROM (
					  SELECT A.STR_CD 
						   , A.SALE_DT
						   , A.POS_NO
						   , A.TRAN_NO
						   , SUM(A.NET_SALE_AMT_TAX) AS	NET_SALE_AMT_TAX
						   , SUM(A.NET_SALE_AMT_TAX	* (NVL(B.APP_RATE,100)/100)) AS	PSALE_AMT
						FROM (
							  SELECT A.STR_CD
								   , A.SALE_DT
								   , A.POS_NO
								   , A.TRAN_NO
								   , A.PUMBUN_CD
								   , SUM(NET_SALE_AMT_TAX) AS NET_SALE_AMT_TAX
								FROM DPS.PS_DISITEM	A, DPS.PS_TRHEADER B,
								(SELECT	STR_CD
									   , PUMBUN_CD 
									FROM MSS.MC_EVTPUMBUN
								   WHERE STR_CD	= ?
									 AND EVENT_CD =	?) C
									 , DPS.PC_STRPBN D
							   WHERE A.STR_CD =	B.STR_CD 
								 AND A.SALE_DT = B.SALE_DT
								 AND A.POS_NO =	B.POS_NO
								 AND A.TRAN_NO = B.TRAN_NO
								 AND A.STR_CD =	C.STR_CD
								 AND A.PUMBUN_CD = C.PUMBUN_CD
								 AND A.STR_CD =	D.STR_CD
								 AND A.PUMBUN_CD = D.PUMBUN_CD
								 AND B.TRAN_FLAG = '0'		-- 정상매출 정보만 가능
								 --AND D.PUMBUN_TYPE = '0'	-- 사은품	지급대상(정상브랜드)
								 AND A.REJCT_FLAG =	'0'		-- 단품 취소 구분(0: 정상)
								 AND A.STR_CD =	?
								 AND A.SALE_DT = ?
								 AND A.POS_NO =	?
								 AND A.TRAN_NO = ?
							   GROUP BY	A.STR_CD
								   , A.SALE_DT
								   , A.POS_NO
								   , A.TRAN_NO
								   , A.PUMBUN_CD
							 ) A
							 LEFT OUTER	JOIN
							 MSS.MC_APPRATE	B
						  ON A.STR_CD =	B.STR_CD
						 AND A.PUMBUN_CD = B.PUMBUN_CD
					   GROUP BY	A.STR_CD 
						   , A.SALE_DT
						   , A.POS_NO
						   , A.TRAN_NO
					  )	A, 
					  (
					  SELECT STR_CD
						   , SALE_DT
						   , POS_NO
						   , TRAN_NO
						   , SUM(PAY_AMT) AS PAY_AMT
						   , CARD_DATA
						FROM DPS.PS_DISCARD	
					   WHERE STR_CD	= ?	
						 AND SALE_DT = ?
						 AND POS_NO	= ?
						 AND TRAN_NO = ? 
						 --AND DECODE(CARD_PUBLISH,'10','05','20','09',CARD_PUBLISH) =
						 AND CARD_FLAG = '10'
						 AND CARD_PURCHASE = ?  --20150317_마케팅팀 김미리사원 요청 카드사은행사 기준을 발급사에서 매입사로 변경
					   GROUP BY	STR_CD,	SALE_DT, POS_NO, TRAN_NO, CARD_DATA
					  )	B
				WHERE A.STR_CD = B.STR_CD
				  AND A.SALE_DT	= B.SALE_DT
				  AND A.POS_NO = B.POS_NO
				  AND A.TRAN_NO	= B.TRAN_NO) SALE
			  LEFT OUTER JOIN
			  (SELECT A.PRSNT_DT
					, B.SEQ_NO
					, A.STR_CD
					, A.PRSNT_NO
					, B.SALE_DT
					, B.POS_NO
					, B.TRAN_NO
					, B.CARD_COMP
					, B.SALE_AMT
					, B.DIV_AMT
				 FROM MSS.MC_EVTSKUPRSNT A,	MSS.MC_PRSNTRECP B
				WHERE A.PRSNT_DT = B.PRSNT_DT
				  AND A.STR_CD = B.STR_CD
				  AND A.PRSNT_NO = B.PRSNT_NO
				  AND A.EVENT_CD = ?  --행사 여러번 가능 강연식 추가    
				  AND A.PRSNT_FLAG IN ('1','2')
				  AND A.CANCEL_GB =	'1'
				  AND B.STR_CD IN ( ?, ?)
				  AND B.SALE_DT	= ?
				  AND B.POS_NO = ?
				  AND B.TRAN_NO	= ?) PRSNT
			ON SALE.STR_CD = PRSNT.STR_CD
		   AND SALE.SALE_DT	= PRSNT.SALE_DT
		   AND SALE.POS_NO = PRSNT.POS_NO
		   AND SALE.TRAN_NO	= PRSNT.TRAN_NO
		 GROUP BY PRSNT.SEQ_NO,	SALE.STR_CD, SALE.SALE_DT, SALE.POS_NO,	SALE.TRAN_NO, SALE.CARD_DATA
		 -- "SEL_SALE_INFO"
		 ]]>
	</query>
	
	<!-- 영수증	정보 조회 :	-->
	<query name="SEL_SALE_INFO_ALL">
		<![CDATA[
		SELECT --DECODE(PRSNT.SEQ_NO,'','T','F') AS CHK
		      'T' AS	CHK -- 기본 지급 미체크
		   , DECODE(PRSNT.SEQ_NO,'','미지급','지급') AS	PROVIDE_GB_NM
		   , DECODE(PRSNT.SEQ_NO,'','0','1') AS	PROVIDE_GB
		   , SALE.STR_CD
		   , SALE.SALE_DT
		   , SALE.POS_NO
		   , SALE.TRAN_NO
		   , SUM(SALE.SALE_AMT)	AS TOT_SALE_AMT
		   , SUM(SALE.APP_RATE_AMT)	AS SALE_AMT
		   , 0 AS DIV_AMT
		   , (SELECT CUST_NO 
				FROM DPS.PS_TRHEADER
			   WHERE STR_CD  = SALE.STR_CD 
			     AND SALE_DT = SALE.SALE_DT 
			     AND POS_NO  = SALE.POS_NO 
			     AND TRAN_NO = SALE.TRAN_NO) AS CUST_NO
		   , SALE.CARD_DATA
		   , (SELECT	NVL2(MIN(A.PRSNT_DT),'Y','N')
			    FROM	MSS.MC_EVTSKUPRSNT A
			  WHERE	A.PRSNT_FLAG IN	('1','2')
				AND	A.CANCEL_GB	= '1'
				AND	A.STR_CD IN ( ?, ?)
				AND	A.EVENT_CD = ?
				AND	A.CARD_DATA IN
					   (SELECT CARD_DATA
						  FROM DPS.PS_DISCARD
						 WHERE STR_CD =	?
						   AND SALE_DT = ?
						   AND POS_NO =	?
						   AND TRAN_NO = ?
						   --AND DECODE(CARD_PUBLISH,'10','05','20','09',CARD_PUBLISH)	=
						   AND CARD_FLAG = '10'
						   AND CARD_PURCHASE = ?  --20150317_마케팅팀 김미리사원 요청 카드사은행사 기준을 발급사에서 매입사로 변경
						 GROUP BY STR_CD, SALE_DT, POS_NO, TRAN_NO, CARD_DATA)
				AND A.PRSNT_DT <= TO_CHAR(SYSDATE,'YYYYMMDD')
				AND A.PRSNT_DT >= ( SELECT CASE WHEN A.EVENT_GIFT_CYC = 'P' THEN B.EVENT_S_DT  
				                                WHEN A.EVENT_GIFT_CYC = 'D' THEN TO_CHAR(SYSDATE,'YYYYMMDD')
				                                ELSE TO_CHAR(SYSDATE,'YYYYMMDD') END
				                      FROM MSS.MC_EVTMST A
				                         , DPS.PC_STREVT B
				                     WHERE A.STR_CD = ?
				                       AND A.EVENT_CD = ?
				                       AND A.STR_CD = B.STR_CD
				                       AND A.EVENT_CD = B.EVENT_CD )  	 
			 )	
			 
		FROM 
		   (SELECT A.STR_CD	
				 , A.SALE_DT
				 , A.POS_NO
				 , A.TRAN_NO
				 , A.NET_SALE_AMT_TAX AS SALE_AMT
				 , B.CARD_DATA				 
				 , CASE	WHEN PSALE_AMT > PAY_AMT THEN PAY_AMT
						WHEN PSALE_AMT = PAY_AMT THEN PAY_AMT
						WHEN PSALE_AMT < PAY_AMT THEN PSALE_AMT	 END AS	APP_RATE_AMT
			  FROM (
					SELECT A.STR_CD	
						 , A.SALE_DT
						 , A.POS_NO
						 , A.TRAN_NO
						 , SUM(A.NET_SALE_AMT_TAX) AS NET_SALE_AMT_TAX
						 , SUM(A.NET_SALE_AMT_TAX *	(NVL(B.APP_RATE,100)/100)) AS PSALE_AMT
					  FROM (
							SELECT A.STR_CD
								 , A.SALE_DT
								 , A.POS_NO
								 , A.TRAN_NO
								 , A.PUMBUN_CD
								 , SUM(NET_SALE_AMT_TAX) AS	NET_SALE_AMT_TAX
							  FROM DPS.PS_DISITEM A, DPS.PS_TRHEADER B,	DPS.PC_STRPBN C
							 WHERE A.STR_CD	= B.STR_CD 
							   AND A.SALE_DT = B.SALE_DT
							   AND A.POS_NO	= B.POS_NO
							   AND A.TRAN_NO = B.TRAN_NO
							   AND A.STR_CD	= C.STR_CD
							   AND A.PUMBUN_CD = C.PUMBUN_CD
							   AND B.TRAN_FLAG = '0'	-- 정상매출 정보만	가능
							   --AND C.PUMBUN_TYPE = '0'	-- 사은품 지급대상(정상브랜드)
							   AND A.REJCT_FLAG	= '0'	-- 단품 취소 구분(0: 정상)
							   AND A.STR_CD	= ?
							   AND A.SALE_DT = ?
							   AND A.POS_NO	= ?
							   AND A.TRAN_NO = ?
							 GROUP BY A.STR_CD
								 , A.SALE_DT
								 , A.POS_NO
								 , A.TRAN_NO
								 , A.PUMBUN_CD
						   ) A
						   LEFT	OUTER JOIN
						   MSS.MC_APPRATE B
						ON A.STR_CD	= B.STR_CD
					   AND A.PUMBUN_CD = B.PUMBUN_CD
					 GROUP BY A.STR_CD 
						 , A.SALE_DT
						 , A.POS_NO
						 , A.TRAN_NO
					) A, 
					(
					SELECT STR_CD
						 , SALE_DT
						 , POS_NO
						 , TRAN_NO
						 , SUM(PAY_AMT)	AS PAY_AMT
						 , CARD_DATA
					  FROM DPS.PS_DISCARD 
					 WHERE STR_CD =	?
					   AND SALE_DT = ?
					   AND POS_NO =	?
					   AND TRAN_NO = ?
					   --AND DECODE(CARD_PUBLISH,'10','05','20','09',CARD_PUBLISH)	= 
					   AND CARD_FLAG = '10'
					   AND CARD_PURCHASE = ?  --20150317_마케팅팀 김미리사원 요청 카드사은행사 기준을 발급사에서 매입사로 변경
					 GROUP BY STR_CD, SALE_DT, POS_NO, TRAN_NO, CARD_DATA
					) B
			  WHERE	A.STR_CD = B.STR_CD
				AND	A.SALE_DT =	B.SALE_DT
				AND	A.POS_NO = B.POS_NO
				AND	A.TRAN_NO =	B.TRAN_NO) SALE
			LEFT OUTER JOIN
			(SELECT	A.PRSNT_DT
				  ,	B.SEQ_NO
				  ,	A.STR_CD
				  ,	A.PRSNT_NO
				  ,	B.SALE_DT
				  ,	B.POS_NO
				  ,	B.TRAN_NO
				  ,	B.CARD_COMP
				  ,	B.SALE_AMT
				  ,	B.DIV_AMT
			   FROM	MSS.MC_EVTSKUPRSNT A, MSS.MC_PRSNTRECP B
			  WHERE	A.PRSNT_DT = B.PRSNT_DT
				AND	A.STR_CD = B.STR_CD
				AND	A.PRSNT_NO = B.PRSNT_NO
				AND 	A.EVENT_CD = ?  --행사 여러번 가능 강연식 추가 
				AND	A.PRSNT_FLAG IN	('1','2')
				AND	A.CANCEL_GB	= '1'
				AND	B.STR_CD IN ( ?, ?)
				AND	B.SALE_DT =	?
				AND	B.POS_NO = ?
				AND	B.TRAN_NO =	?) PRSNT
		  ON SALE.STR_CD = PRSNT.STR_CD
		 AND SALE.SALE_DT =	PRSNT.SALE_DT
		 AND SALE.POS_NO = PRSNT.POS_NO
		 AND SALE.TRAN_NO =	PRSNT.TRAN_NO
	   GROUP BY	PRSNT.SEQ_NO, SALE.STR_CD, SALE.SALE_DT, SALE.POS_NO, SALE.TRAN_NO, SALE.CARD_DATA
       --"SEL_SALE_INFO_ALL"
		 ]]>
	</query>

	<!-- 카드 정보 조회 :	-->
	<query name="SEL_SALE_INFO_ALL3">
		<![CDATA[
		SELECT --DECODE(PRSNT.SEQ_NO,'','T','F') AS CHK
		    'T' AS	CHK -- 기본 지급 미체크
		   , DECODE(PRSNT.SEQ_NO,'','미지급','지급') AS	PROVIDE_GB_NM
		   , DECODE(PRSNT.SEQ_NO,'','0','1') AS	PROVIDE_GB
		   , SALE.STR_CD
		   , SALE.SALE_DT
		   , SALE.POS_NO
		   , SALE.TRAN_NO
		   , SUM(SALE.SALE_AMT)	AS TOT_SALE_AMT
		   , SUM(SALE.APP_RATE_AMT)	AS SALE_AMT
		   , 0 AS DIV_AMT
		   , (SELECT CUST_NO 
				FROM DPS.PS_TRHEADER
			   WHERE STR_CD  = SALE.STR_CD 
			     AND SALE_DT = SALE.SALE_DT 
			     AND POS_NO  = SALE.POS_NO 
			     AND TRAN_NO = SALE.TRAN_NO) AS CUST_NO
		   , SALE.CARD_DATA
		   , (SELECT NVL2(MIN(A.PRSNT_DT),'Y','N')
			    FROM MSS.MC_EVTSKUPRSNT A
			  WHERE	A.PRSNT_FLAG IN	('1','2')
				AND	A.CANCEL_GB	= '1'
				AND	A.STR_CD IN ( ?, ?)
				AND	A.EVENT_CD = ?
				AND	A.CARD_DATA = ?
				AND A.PRSNT_DT <= TO_CHAR(SYSDATE,'YYYYMMDD')
				AND A.PRSNT_DT >= ( SELECT CASE WHEN A.EVENT_GIFT_CYC = 'P' THEN B.EVENT_S_DT  
				                                WHEN A.EVENT_GIFT_CYC = 'D' THEN ?
				                                ELSE ? END
				                      FROM MSS.MC_EVTMST A
				                         , DPS.PC_STREVT B
				                     WHERE A.STR_CD = ?
				                       AND A.EVENT_CD = ?
				                       AND A.STR_CD = B.STR_CD
				                       AND A.EVENT_CD = B.EVENT_CD )   
			 )	
		FROM 
		   (SELECT A.STR_CD	
				 , A.SALE_DT
				 , A.POS_NO
				 , A.TRAN_NO
				 , A.NET_SALE_AMT_TAX AS SALE_AMT
				 , B.CARD_DATA				 
				 , CASE	WHEN PSALE_AMT > PAY_AMT THEN PAY_AMT
						WHEN PSALE_AMT = PAY_AMT THEN PAY_AMT
						WHEN PSALE_AMT < PAY_AMT THEN PSALE_AMT	 END AS	APP_RATE_AMT
			  FROM (
					SELECT A.STR_CD	
						 , A.SALE_DT
						 , A.POS_NO
						 , A.TRAN_NO
						 , SUM(A.NET_SALE_AMT_TAX) AS NET_SALE_AMT_TAX
						 , SUM(A.NET_SALE_AMT_TAX *	(NVL(B.APP_RATE,100)/100)) AS PSALE_AMT
					  FROM (
							SELECT A.STR_CD
								 , A.SALE_DT
								 , A.POS_NO
								 , A.TRAN_NO
								 , A.PUMBUN_CD
								 , SUM(NET_SALE_AMT_TAX) AS	NET_SALE_AMT_TAX
							  FROM DPS.PS_DISITEM A, DPS.PS_TRHEADER B,	DPS.PC_STRPBN C
							 WHERE A.STR_CD	= B.STR_CD 
							   AND A.SALE_DT = B.SALE_DT
							   AND A.POS_NO	= B.POS_NO
							   AND A.TRAN_NO = B.TRAN_NO
							   AND A.STR_CD	= C.STR_CD
							   AND A.PUMBUN_CD = C.PUMBUN_CD
							   AND B.TRAN_FLAG = '0'	-- 정상매출 정보만	가능
							   --AND C.PUMBUN_TYPE = '0'	-- 사은품 지급대상(정상브랜드)
							   AND A.REJCT_FLAG	= '0'	-- 단품 취소 구분(0: 정상)
							   AND A.STR_CD	IN ( ?, ?)
							   AND A.SALE_DT = ?
							 GROUP BY A.STR_CD
								 , A.SALE_DT
								 , A.POS_NO
								 , A.TRAN_NO
								 , A.PUMBUN_CD
						   ) A
						   LEFT	OUTER JOIN
						   MSS.MC_APPRATE B
						ON A.STR_CD	= B.STR_CD
					   AND A.PUMBUN_CD = B.PUMBUN_CD
					 GROUP BY A.STR_CD 
						 , A.SALE_DT
						 , A.POS_NO
						 , A.TRAN_NO
					) A, 
					(
					SELECT STR_CD
						 , SALE_DT
						 , POS_NO
						 , TRAN_NO
						 , SUM(PAY_AMT)	AS PAY_AMT
						 , CARD_DATA
					  FROM DPS.PS_DISCARD 
					 WHERE STR_CD IN ( ?, ?)
					   AND SALE_DT = ?
					   --AND DECODE(CARD_PUBLISH,'10','05','20','09',CARD_PUBLISH)	=
					   AND CARD_FLAG = '10'
					   AND CARD_PURCHASE = ?  --20150317_마케팅팀 김미리사원 요청 카드사은행사 기준을 발급사에서 매입사로 변경
					   AND CARD_DATA = ?
					 GROUP BY STR_CD, SALE_DT, POS_NO, TRAN_NO, CARD_DATA
					) B
			  WHERE	A.STR_CD = B.STR_CD
				AND	A.SALE_DT =	B.SALE_DT
				AND	A.POS_NO = B.POS_NO
				AND	A.TRAN_NO =	B.TRAN_NO) SALE
			LEFT OUTER JOIN
			(SELECT	A.PRSNT_DT
				  ,	B.SEQ_NO
				  ,	A.STR_CD
				  ,	A.PRSNT_NO
				  ,	B.SALE_DT
				  ,	B.POS_NO
				  ,	B.TRAN_NO
				  ,	B.CARD_COMP
				  ,	B.SALE_AMT
				  ,	B.DIV_AMT
			   FROM	MSS.MC_EVTSKUPRSNT A, MSS.MC_PRSNTRECP B
			  WHERE	A.PRSNT_DT = B.PRSNT_DT
				AND	A.STR_CD = B.STR_CD
				AND	A.PRSNT_NO = B.PRSNT_NO
				AND 	A.EVENT_CD = ?  --행사 여러번 가능 강연식 추가 
				AND	A.PRSNT_FLAG IN	('1','2')
				AND	A.CANCEL_GB	= '1'
				AND	B.STR_CD IN ( ?, ?)
				AND	B.SALE_DT =	? ) PRSNT
		  ON SALE.STR_CD = PRSNT.STR_CD
		 AND SALE.SALE_DT =	PRSNT.SALE_DT
		 AND SALE.POS_NO = PRSNT.POS_NO
		 AND SALE.TRAN_NO =	PRSNT.TRAN_NO
	   GROUP BY	PRSNT.SEQ_NO, SALE.STR_CD, SALE.SALE_DT, SALE.POS_NO, SALE.TRAN_NO, SALE.CARD_DATA
		--"SEL_SALE_INFO_ALL3"
		 ]]>
	</query>

