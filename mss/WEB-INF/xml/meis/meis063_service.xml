<?xml version="1.0" encoding="euc-kr"?>
<!-- XML 버전 1.0을 사용하며 encoding 타입은 ‘euc-kr’로 한다.-->
<!--
 * 작 성 자 : 최재형
 * 회 사 명 : 
 * 작 성 일 : 2011.07.05
 * 변 경 일 : 
 * 변경내용 : 
 * 개    요 :  월별조직별마감실적조회
 -->
 <service name="/meis063.me">
 
     <!-- 실적항목 헤더  -->
    <gauce name="H_SEL_BIZ">
        <column colName="BIZ_CD"        colType="TB_STRING" size="6"  dec="0" keyType="TB_KEY"    roundMode="ROUND" />
        <column colName="BIZ_CD_NM"     colType="TB_STRING" size="60" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SUM_AMT"       colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="RSLT_AMT"      colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_RECV_AMT"  colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_AMT"       colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="STR_CD"        colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_RSLT_YM" colType="TB_STRING" size="6"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />        
    </gauce>

    <!-- 조직 헤더  -->
    <gauce name="H_SEL_ORG">
        <column colName="ORG_FLAG"      colType="TB_STRING" size="1"  dec="0" keyType="TB_KEY"    roundMode="ROUND" />
        <column colName="ORG_CD"        colType="TB_STRING" size="10" dec="0" keyType="TB_KEY"    roundMode="ROUND" />
        <column colName="ORG_NAME"      colType="TB_STRING" size="40" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SUM_AMT"       colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="RSLT_AMT"      colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_RECV_AMT"  colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_AMT"       colType="TB_DECIMAL"    size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="STR_CD"        colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="STR_NM"        colType="TB_STRING" size="60"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DEPT_CD"        colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DEPT_NM"        colType="TB_STRING" size="60"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="TEAM_CD"        colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="TEAM_NM"        colType="TB_STRING" size="60"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="PC_CD"        colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="PC_NM"        colType="TB_STRING" size="60"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_RSLT_YM" colType="TB_STRING" size="6"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_CD"        colType="TB_STRING" size="6"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>

    <!-- 엑셀출력 헤더  -->
    <gauce name="H_BIZRSLT_EXCEL">
        <column colName="STR_CD"        colType="TB_STRING"  size="2"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="STR_NAME"      colType="TB_STRING"  size="20" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_CD"        colType="TB_STRING"  size="8"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_CD_NM"     colType="TB_STRING"  size="60" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="ORG_CD"        colType="TB_STRING"  size="10" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="ORG_NAME"      colType="TB_STRING"  size="40"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BIZ_RSLT_YM"   colType="TB_STRING"  size="6"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SUM_AMT"       colType="TB_DECIMAL"     size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="RSLT_AMT"      colType="TB_DECIMAL"     size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_RECV_AMT"  colType="TB_DECIMAL"     size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="DIV_AMT"       colType="TB_DECIMAL"     size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>

    
    <!-- 실적항목별 마감실적조회 -->
    <query name="SEL_BIZ">
        <![CDATA[
            /******
            * 실적항목별 마감실적조회
            ******/
            SELECT  B.BIZ_CD
                   ,B.BIZ_CD_NM
                   ,A.RSLT_AMT + A.DIV_RECV_AMT - DIV_AMT                                  AS SUM_AMT
                   ,A.RSLT_AMT
                   ,A.DIV_RECV_AMT
                   ,A.DIV_AMT
             
                   ,A.STR_CD
                   ,A.BIZ_RSLT_YM             
            FROM (
                   SELECT  BIZ.BIZ_CD
                          ,SUM(NVL(BIZ.RSLT_AMT,0))                                        AS RSLT_AMT
                          ,SUM(NVL(BIZ.PR_DIV_RECV_AMT,0) + NVL(BIZ.SD_DIV_RECV_AMT,0))    AS DIV_RECV_AMT
                          ,SUM(NVL(BIZ.PR_DIV_AMT,0) + NVL(BIZ.SD_DIV_AMT,0))              AS DIV_AMT
                    
                          ,BIZ.STR_CD
                          ,BIZ.BIZ_RSLT_YM
                   FROM   MSS.ME_BIZRSLT BIZ
                   WHERE  1 = 1
                   AND    BIZ.STR_CD        = ?
                   AND    BIZ.BIZ_RSLT_YM 	= ?
                   GROUP BY BIZ.BIZ_CD
                     ,BIZ.STR_CD
                     ,BIZ.BIZ_RSLT_YM
                  ) A
                  ,MSS.ME_BIZCDMST B
            WHERE 1 = 1
            AND   A.BIZ_CD = B.BIZ_CD
            ORDER BY B.BIZ_CD
        ]]>
    </query>


    <!-- 실적항목별,조직별 마감실적조회 -->
    <query name="SEL_ORG">
        <![CDATA[
            /*****
            * 실적항목별,조직별 마감실적조회
            *****/
			SELECT  B.ORG_FLAG
			       ,A.ORG_CD
			       ,B.ORG_NAME
			       ,A.RSLT_AMT + A.DIV_RECV_AMT - DIV_AMT                                  AS SUM_AMT
			       ,A.RSLT_AMT
			       ,A.DIV_RECV_AMT
			       ,A.DIV_AMT
			       
			       ,A.STR_CD
             	   ,DPS.FN_GET_ORG_SHORT_NAME(A.STR_CD, '00', '00', '00', '00')            AS STR_NM
           	 	   ,A.DEPT_CD
             	   ,DPS.FN_GET_ORG_SHORT_NAME(A.STR_CD, A.DEPT_CD, '00', '00', '00')       AS DEPT_NM
             	   ,A.TEAM_CD
             	   ,DPS.FN_GET_ORG_SHORT_NAME(A.STR_CD, A.DEPT_CD, A.TEAM_CD, '00', '00')  AS TEAM_NM
             	   ,A.PC_CD			             
             	   ,DPS.FN_GET_ORG_SHORT_NAME(A.STR_CD, A.DEPT_CD, A.TEAM_CD, A.PC_CD, '00')  AS PC_NM		             

			       ,A.BIZ_RSLT_YM
			       ,A.BIZ_CD
			FROM (
			      SELECT  BIZ.ORG_CD
			             ,SUM(NVL(BIZ.RSLT_AMT,0))                                        AS RSLT_AMT
			             ,SUM(NVL(BIZ.PR_DIV_RECV_AMT,0) + NVL(BIZ.SD_DIV_RECV_AMT,0))    AS DIV_RECV_AMT
			             ,SUM(NVL(BIZ.PR_DIV_AMT,0) + NVL(BIZ.SD_DIV_AMT,0))              AS DIV_AMT
			      
			             ,BIZ.STR_CD
                   	     ,BIZ.DEPT_CD
                   	     ,BIZ.TEAM_CD
                         ,BIZ.PC_CD			             
			             ,BIZ.BIZ_RSLT_YM
			             ,BIZ.BIZ_CD
			      FROM   MSS.ME_BIZRSLT BIZ
			      WHERE  1 = 1
			      AND    BIZ.STR_CD        	= ?
			      AND    BIZ.BIZ_RSLT_YM 	= ?
			      AND    BIZ.BIZ_CD        	= ?
			      GROUP BY BIZ.ORG_CD
			              ,BIZ.STR_CD
                    	  ,BIZ.DEPT_CD
                    	  ,BIZ.TEAM_CD
                    	  ,BIZ.PC_CD			              
			              ,BIZ.BIZ_RSLT_YM
			              ,BIZ.BIZ_CD
			     ) A
			     , DPS.PC_ORGMST B
			WHERE A.ORG_CD = B.ORG_CD
			ORDER BY A.ORG_CD         
        ]]>
    </query>        
    
    <!-- 엑셀 데이터 조회쿼리 -->
    <query name="SEL_EXCEL">
        <![CDATA[
            /*****
            * 엑셀 데이터 조회
            *****/
			SELECT BIZ.STR_CD
			       ,STR.STR_NAME
			       ,BIZ.BIZ_CD
			       ,BMST.BIZ_CD_NM
			       ,BIZ.ORG_CD
			       ,ORG.ORG_NAME
			       ,BIZ.BIZ_RSLT_YM
			       ,NVL(BIZ.RSLT_AMT,0) + NVL(BIZ.PR_DIV_RECV_AMT,0) + NVL(BIZ.SD_DIV_RECV_AMT,0) 
			           - (NVL(BIZ.PR_DIV_AMT,0) + NVL(BIZ.SD_DIV_AMT,0))                          AS SUM_AMT
			       ,NVL(BIZ.RSLT_AMT,0)                                                           AS RSLT_AMT
			       ,NVL(BIZ.PR_DIV_RECV_AMT,0) + NVL(BIZ.SD_DIV_RECV_AMT,0)                       AS DIV_RECV_AMT
			       ,NVL(BIZ.PR_DIV_AMT,0) + NVL(BIZ.SD_DIV_AMT,0)                                AS DIV_AMT
			FROM MSS.ME_BIZRSLT BIZ
			     ,DPS.PC_STRMST STR
			     ,MSS.ME_BIZCDMST BMST
			     ,DPS.PC_ORGMST ORG
			WHERE 1 = 1
			AND BIZ.STR_CD = ?
			AND BIZ.BIZ_RSLT_YM = ?
			
			AND BIZ.STR_CD = STR.STR_CD
			AND BIZ.BIZ_CD = BMST.BIZ_CD
			AND BIZ.ORG_CD = ORG.ORG_CD
			ORDER BY BIZ.STR_CD, BIZ.BIZ_CD, BIZ.ORG_CD, BIZ.BIZ_RSLT_YM       
        ]]>
    </query> 
 
 </service>