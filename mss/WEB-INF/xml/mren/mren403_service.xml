    <!-- 삭제부분  -->
    <!--  MR_CALMST  수정 -->
    <query name="UPD_MR_CALMST">
        <![CDATA[
			UPDATE MSS.MR_CALMST
               SET TAX_ISSUE_COMMIS = CASE WHEN ? IN ('40','50') /*매출수수료*/
                                           THEN ''
                                           ELSE TAX_ISSUE_COMMIS END 
                 , TAX_ISSUE_RENT   = CASE WHEN ? IN ('43','53') /*임대료*/
			                               THEN ''
			                               ELSE TAX_ISSUE_RENT END 
                 , TAX_ISSUE_MGR    = CASE WHEN ? IN ('41','51') /*관리비*/
			                               THEN CASE WHEN ? = '1' /*과세*/
			                                         THEN ''
			                                         ELSE TAX_ISSUE_MGR END 
			                               ELSE TAX_ISSUE_MGR END 
                 , TAX_ISSUE_MGRNTAX= CASE WHEN ? IN ('41','51') /*관리비*/
			                               THEN CASE WHEN ? = '2' /*면세*/
			                                         THEN ''
			                                         ELSE TAX_ISSUE_MGRNTAX END 
			                               ELSE TAX_ISSUE_MGRNTAX END 
                 , MOD_DATE          = SYSDATE                   /* 수정일시 */
                 , MOD_ID            = ?                         /* 수정자 */ 
			 WHERE (TAX_ISSUE_RENT      = ?||?||LPAD(?,5,'0') OR
			        TAX_ISSUE_MGR       = ?||?||LPAD(?,5,'0') OR
			        TAX_ISSUE_MGRNTAX   = ?||?||LPAD(?,5,'0') OR
			        TAX_ISSUE_COMMIS    = ?||?||LPAD(?,5,'0')
			        )
        ]]>
    </query>
    
