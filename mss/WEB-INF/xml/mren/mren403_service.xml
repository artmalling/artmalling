    <!--   전자세금계산서 수정/삭제 리스트  -->
    <query name="SEL_LIST">
        <![CDATA[
        SELECT SEL             
             , STR_CD 
             , TAX_ISSUE_DT    
             , TAX_ISSUE_SEQ_NO
             , VEN_CD          
             , VEN_NM
             , ETAX_NO         
             , ETAX_STAT       
             , ETAX_STAT_NM    
             , BIZ_TYPE     
             , TAX_FLAG        
             , PAY_CYC         
             , PAY_CNT         
             , TAX_INV_FLAG    
             , EDI_SEQ_NO
             , TAX_ISSUE_FLAG
             , TAX_FLAG_CD
             , STR_CD || TAX_ISSUE_DT || TAX_ISSUE_SEQ_NO AS KEY
        FROM (
                SELECT 'F' AS SEL   
                    , TAX.STR_CD                                                                               /* 점코드 */
                    , TAX.TAX_ISSUE_DT                                                                         /* 세금계산서발행일자 */
                    , TAX.TAX_ISSUE_SEQ_NO                                                                     /* 세금계산서발행순번 */
                    , TAX.VEN_CD                                                                               /* 협력사코드 */
                    , DPS.FN_GET_VENDOR_NAME(TAX.VEN_CD)    AS VEN_NM                                          /* 협력사명 */
                    , TAX.ETAX_NO                                                                              /* 전자세금계산서ID */
                    , DPS.FN_GET_TAX_STATE(TAX.EDI_SEQ_NO) AS ETAX_STAT                                        /* 전자세금계산서상태 */
                    , COM.FN_GET_COMM_NAME('D', 'P401', DPS.FN_GET_TAX_STATE(TAX.EDI_SEQ_NO)) AS ETAX_STAT_NM  /* 전자세금계산서상태명 */
                    , COM.FN_GET_COMM_NAME('D', 'P002', TAX.BIZ_TYPE)      AS BIZ_TYPE                         /* 거래형태 */
                    , COM.FN_GET_COMM_NAME('D', 'P004', TAX.TAX_FLAG)      AS TAX_FLAG                         /* 과세구분 */
                    , COM.FN_GET_COMM_NAME('D', 'P052', TAX.PAY_CYC)       AS PAY_CYC                          /* 지불주기 */
                    , CASE WHEN TAX.PAY_CYC = '1' THEN  COM.FN_GET_COMM_NAME('D', 'P407', TAX.PAY_CNT)
                           WHEN TAX.PAY_CYC = '2' THEN  COM.FN_GET_COMM_NAME('D', 'P408', TAX.PAY_CNT)  
                           ELSE  COM.FN_GET_COMM_NAME('D', 'P409', TAX.PAY_CNT) END  AS PAY_CNT                /* 지불회차 */
                    , COM.FN_GET_COMM_NAME('D', 'P403', TAX.TAX_INV_FLAG)  AS TAX_INV_FLAG                     /* 계산서구분 */
                    , TAX.EDI_SEQ_NO
                    , TAX.TAX_ISSUE_FLAG
                    , TAX.TAX_FLAG  AS TAX_FLAG_CD   
                FROM DPS.PP_TAXMST     TAX
                   , DPS.PC_VENMST     VEN
                   , DPS.PC_STRVENMST  SVM
                   , MSS.MR_CALMST     CAL
               WHERE TAX.STR_CD               = SVM.STR_CD
                 AND TAX.VEN_CD               = SVM.VEN_CD
                 AND TAX.VEN_CD               = VEN.VEN_CD
                 AND ( (TAX.STR_CD=(SUBSTR(CAL.TAX_ISSUE_RENT,1,2)) AND TAX.TAX_ISSUE_DT=(SUBSTR(CAL.TAX_ISSUE_RENT,3,8)) AND TAX.TAX_ISSUE_SEQ_NO=(SUBSTR(CAL.TAX_ISSUE_RENT,11,5))) OR 
                       (TAX.STR_CD=(SUBSTR(CAL.TAX_ISSUE_MGR,1,2)) AND TAX.TAX_ISSUE_DT=(SUBSTR(CAL.TAX_ISSUE_MGR,3,8)) AND TAX.TAX_ISSUE_SEQ_NO=(SUBSTR(CAL.TAX_ISSUE_MGR,11,5))) OR 
                       (TAX.STR_CD=(SUBSTR(CAL.TAX_ISSUE_MGRNTAX,1,2)) AND TAX.TAX_ISSUE_DT=(SUBSTR(CAL.TAX_ISSUE_MGRNTAX,3,8)) AND TAX.TAX_ISSUE_SEQ_NO=(SUBSTR(CAL.TAX_ISSUE_MGRNTAX,11,5))) OR
                       (TAX.STR_CD=(SUBSTR(CAL.TAX_ISSUE_COMMIS,1,2)) AND TAX.TAX_ISSUE_DT=(SUBSTR(CAL.TAX_ISSUE_COMMIS,3,8)) AND TAX.TAX_ISSUE_SEQ_NO=(SUBSTR(CAL.TAX_ISSUE_COMMIS,11,5)))
                       )
                 AND TAX.STR_CD               = ?
                 AND TAX.PAY_YM               = ? 
                 AND TAX.PAY_CYC              = ?
                 AND TAX.PAY_CNT              = ?
                 AND TAX.BIZ_TYPE             LIKE ? || '%'
                 AND TAX.TAX_FLAG             LIKE ? || '%'
                 AND NVL(TAX.EDI_SEQ_NO,' ')  LIKE ? || '%'
                 AND TAX.VEN_CD               LIKE ? || '%'
                 AND TAX.TAX_INV_FLAG         = ?
                 AND TAX.DEL_FLAG             = 'N'
          )
          WHERE ETAX_STAT LIKE ? || '%'
        ]]>
    </query> 
    
    <query name="SEL_TAX_DT">
        <![CDATA[
            AND TAX_ISSUE_DT BETWEEN ? AND ?
        ]]>
    </query> 
    <query name="SEL_TAX_ISSUE_FLAG">
        <![CDATA[
            AND TAX_ISSUE_FLAG = ?
        ]]>
    </query>
    <query name="SEL_ORDER_BY">
