    <!-- Pop-Up  조회 SQL -->
    <query name="SEL_STR_CD">
        <![CDATA[
            SELECT A.BRCH_ID
                 , A.BRCH_NAME 
                 , A.STR_CD
                 , B.STR_NAME
                 , A.COMP_NO 
                 , A.REP_BRAND_NM          
