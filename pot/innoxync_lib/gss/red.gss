components {
	font-size:12;
	font-family:굴림;
}

mxcombo {
	xpstyle:true;
}

mxfilecontrol {}

mxgrid {
	borderstyle:0;
	edgellinecolor:#ffffff;
	headborder:0;
	indwidth:0;
	linecolor:#ffffff;
	border-style:solid;
	border-width:1;
	border-color:#6D7382;
}

	mxgrid column {
		headbgcolor:#C0504D;
		headcolor:#ffffff;
		headfontstyle:bold;
		bgcolor:{decode(currow-tointeger(currow/2)*2,0,\'#F4E9E9\',1,\'#ffffff\')};
	}
	
	mxgrid selectioncolor focuscurrow {
		textcolor:#000000;
		bgcolor:#babef6;
	}

mxmaskedit {
	border:false;
	numeric:false;
	border-style:solid;
	border-width:1;
	border-color:#6D7382;
}

mxmenu {}

mxmgrid {
	border-style:solid;
	border-width:1;
	border-color:#6D7382;
}
	mxmgrid backgroundinfo {
		borderstyle:none;
	}
	
	mxmgrid indicatorinfo {
		width:0;
	}
	
	mxmgrid column header {
		fontstyle:bold;
		bgcolor:#C0504D;
		color:#ffffff;
	}
	
	mxmgrid column view {
		bordercolor:#ffffff;
		bgcolor:@if(currec%2=0,[#F4E9E9],[#ffffff]);
	}

mxradio {}

mxtab {
	textcolor:#ffffff;
	backcolor:#C0504D;
	disabletextcolor:#000000;
	disablebackcolor:#F4E9E9;
}

mxtree {
	borderstyle:0;
	border-style:solid;
	border-width:1;
	border-color:#6D7382;
}

mxtextarea {
	border-style:solid;
	border-width:1;
	border-color:#6D7382;
}

button {}

checkbox {}

label {}

listbox {}

panel {}

textbox {}

panel.topCondition {
	border-style:solid;
	border-width:1;
	border-color:#000000;
	background-color:#EFEFEF;
}
