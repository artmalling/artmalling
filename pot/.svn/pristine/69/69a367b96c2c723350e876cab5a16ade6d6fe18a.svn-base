<?xml version="1.0" encoding="euc-kr"?>
<!-- XML 버전 1.0을 사용하며 encoding 타입은 ‘euc-kr’로 한다.-->
<!--
 * 작 성 자 : DHL
 * 회 사 명 : FKSS
 * 작 성 일 : 2012.05.09
 * 변 경 일  :
 * 변경내용 :
 * 개     요  : 브랜드코드(브랜드별) 공통 XML
 -->
<service name="/ccom222.cc">	

    <gauce name="H_PBNPMK_SRT">
      <column colName="SEL"               colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_SRT_CD"     colType="TB_STRING" size="4"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_CD"         colType="TB_STRING" size="8"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_NAME"       colType="TB_STRING" size="40"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="RECP_NAME"         colType="TB_STRING" size="20"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_LEVEL"      colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="L_CD"              colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="M_CD"              colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="S_CD"              colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="D_CD"              colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="UNIT_CD"           colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="TAG_FLAG"          colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="TAG_PRT_OWN_FLAG"  colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
    </gauce>  
    
    <!-- 코드/명 조회 -->
    <gauce name="H_PBNPMK_SRT_COMBO">
      <column colName="CODE"       colType="TB_STRING" size="4"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SUBCODE"    colType="TB_STRING" size="8"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="NAME"       colType="TB_STRING" size="40" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="UNIT_CD"    colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
    </gauce>
    <!-- 품목코드조회 SQL -->
    <query name="SEL_PBNPMK_SRT">
        <![CDATA[                                        
            SELECT 'F'        AS SEL
                 , PMK.PUMMOK_SRT_CD
                 , PMK.PUMMOK_CD
                 , PMK.PUMMOK_NAME
                 , PMK.RECP_NAME
                 , PMK.PUMMOK_LEVEL
                 , PMK.L_CD
                 , PMK.M_CD
                 , PMK.S_CD
                 , PMK.D_CD
                 , PMK.UNIT_CD
                 , PPK.TAG_FLAG
                 , PPK.TAG_PRT_OWN_FLAG
              FROM DPS.PC_PMKMST PMK
                 , DPS.PC_PBNPMK PPK
             WHERE PPK.PUMMOK_CD = PMK.PUMMOK_CD
               AND PPK.PUMBUN_CD = ?
               AND PMK.PUMMOK_LEVEL = '4'
        ]]>
    </query>

    <query name="SEL_PBNPMK_SRT_WHERE_PUMMOK_SRT_CD">
        <![CDATA[
               AND PMK.PUMMOK_SRT_CD   = ?
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_WHERE_LIKE_PUMMOK_SRT_CD">
        <![CDATA[
               AND PMK.PUMMOK_SRT_CD   LIKE ?||'%'
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_WHERE_PUMMOK_NM">
        <![CDATA[
               AND PMK.PUMMOK_NAME LIKE '%'||?||'%'
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_WHERE_FRESH_YN">
        <![CDATA[
               AND PMK.FRESH_YN    = ?
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_WHERE_USE_YN">
        <![CDATA[
               AND PPK.USE_YN      = ?
               AND PMK.USE_YN      = ?
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_ORDER">
        <![CDATA[
             ORDER BY PMK.PUMMOK_SRT_CD
        ]]>
    </query>
    <!-- 품번별 품목코드 콤보조회 SQL -->
    <query name="SEL_PBNPMK_SRT_COMBO">
        <![CDATA[       
            SELECT PMK.PUMMOK_SRT_CD
                 , PMK.PUMMOK_CD
                 , PMK.PUMMOK_NAME
                 , PMK.UNIT_CD
              FROM DPS.PC_PMKMST PMK
                 , DPS.PC_PBNPMK PPK
             WHERE PPK.PUMMOK_CD = PMK.PUMMOK_CD
               AND PPK.PUMBUN_CD = ?
               AND PMK.PUMMOK_LEVEL = '4'
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_COMBO_WHERE_USE_YN">
        <![CDATA[
               AND PPK.USE_YN    = ?
        ]]>
    </query>
    <query name="SEL_PBNPMK_SRT_COMBO_ORDER">
        <![CDATA[
             ORDER BY PMK.PUMMOK_SRT_CD
        ]]>
    </query>
</service>