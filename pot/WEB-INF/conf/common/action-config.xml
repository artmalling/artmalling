<?xml version="1.0" encoding="euc-kr"?>
<service>

	<!-- Beaver Framework에서 제공하는 공통 기능 Action 특별한 경우이외에는 삭제하지 마세요 -->
	
    <!-- BeaverSet객체와 iBATIS쿼리만 사용하여 데이터셋을 구성할때 사용하는 액션 -->
	<action name="/common/retrieveDefault" type="com.shift.framework.common.RetrieveDefaultCmd">
		<method name="execute"/>
	</action>
	
	<!-- Beaver에서 만든 Set을 사용하여 데이터셋 헤더를 만드는 액션 -->
	<action name="/common/headerMaker" type="com.shift.framework.common.HeaderMakerCmd">
		<method name="execute"/>
	</action>
	
	<!-- GForms에서 사용할 세션 데이터를 가지고 오는 액션 -->
	<action name="/common/retrieveSession" type="com.shift.framework.common.RetrieveSessionCmd">
		<method name="execute"/>
	</action>
	
	<!-- GForms에서 사용할 현재 날짜를  가지고 오는 액션 -->
	<action name="/common/getDate" type="com.shift.framework.common.DateUtilsCmd">
		<method name="getDate"/>
	</action>
	
	<!--  GForms에서 사용할 복합적인 날짜 처리를 위한 액션  -->
	<action name="/common/getComplexDate" type="com.shift.framework.common.DateUtilsCmd">
		<method name="getComplexDate"/>
	</action>
</service>