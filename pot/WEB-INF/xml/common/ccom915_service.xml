<?xml version="1.0" encoding="euc-kr"?>
<!-- XML 버전 1.0을 사용하며 encoding 타입은 ‘euc-kr’로 한다.-->
<!--
 * 작 성 자 : 정진영
 * 회 사 명 : FKSS
 * 작 성 일 : 2010.02.21
 * 변 경 일  :
 * 변경내용 :
 * 개     요  : 단품코드조회(점별) 공통 XML
 -->
<service name="/ccom915.cc">	

    <!-- 코드/명 조회 -->
    <gauce name="H_STRSKUMST">
      <column colName="SEL"            colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SKU_CD"         colType="TB_STRING" size="13" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SKU_NAME"       colType="TB_STRING" size="40" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="RECP_NAME"      colType="TB_STRING" size="40" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMBUN_CD"      colType="TB_STRING" size="6"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMBUN_NAME"    colType="TB_STRING" size="40" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_CD"      colType="TB_STRING" size="8"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SALE_UNIT_CD"   colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="CMP_SPEC_CD"    colType="TB_DECIMAL" size="5" dec="2" keyType="TB_NORMAL"  roundMode="" />
      <column colName="CMP_SPEC_UNIT"  colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="GIFT_AMT_TYPE"  colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="STYLE_CD"       colType="TB_STRING" size="54" dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="COLOR_CD"       colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SIZE_CD"        colType="TB_STRING" size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SKU_TYPE"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
    
      <column colName="BIZ_TYPE"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="BIZ_FLAG"       colType="TB_STRING" size="2"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="TAX_FLAG"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMBUN_FLAG"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMBUN_TYPE"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="VEN_CD"       colType="TB_STRING" size="6"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="RUND_FLAG"       colType="TB_STRING" size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
    </gauce>  
    
    <!-- 단품코드조회(점별) 조회 SQL -->
    <query name="SEL_STRSKUMST">
        <![CDATA[                                        
             SELECT 'F'        AS SEL
                 , SKU.SKU_CD
                 , SKU.SKU_NAME
                 , SKU.RECP_NAME
                 , SKU.PUMBUN_CD
                 , PBN.PUMBUN_NAME
                 , SKU.PUMMOK_CD
                 , SKU.SALE_UNIT_CD
                 , SKU.CMP_SPEC_CD
                 , SKU.CMP_SPEC_UNIT
                 , SKU.GIFT_AMT_TYPE
                 , SKU.STYLE_CD
                 , SKU.COLOR_CD
                 , SKU.SIZE_CD
                 , SKU.SKU_TYPE
                 , PBN.BIZ_TYPE
                 , PBN.BIZ_FLAG
                 , PBN.TAX_FLAG
                 , PBN.PUMBUN_FLAG
                 , PBN.PUMBUN_TYPE
                 , PBN.VEN_CD
                 , SVM.RUND_FLAG
              FROM  DPS.PC_SKUMST    SKU
                 , DPS.PC_STRSKUMST    SSM
                 , DPS.PC_PBNMST       PBN
                 , DPS.PC_STRVENMST    SVM
                 , DPS.PC_PMKMST    PMK
              WHERE SKU.SKU_CD      = SSM.SKU_CD
               AND SSM.PUMBUN_CD    = PBN.PUMBUN_CD
               AND SSM.STR_CD       = SVM.STR_CD
               AND SSM.VEN_CD       = SVM.VEN_CD
               AND SKU.PUMMOK_CD    = PMK.PUMMOK_CD
             AND PMK.L_CD LIKE ? 
             AND PMK.M_CD LIKE ?
             AND PMK.S_CD LIKE ?
        ]]>
    </query>
    <!-- 단품코드조회(점별- 소스마킹코드추가) 조회 SQL -->
    <query name="SEL_STRSKUMST_BARCODE">
        <![CDATA[                                        
           SELECT 'F'          AS SEL
                 , BCM.BARCODE  AS SKU_CD
                 , SKU.SKU_NAME
                 , SKU.RECP_NAME
                 , SKU.PUMBUN_CD
                 , PBN.PUMBUN_NAME
                 , SKU.PUMMOK_CD
                 , SKU.SALE_UNIT_CD
                 , SKU.CMP_SPEC_CD
                 , SKU.CMP_SPEC_UNIT
                 , SKU.GIFT_AMT_TYPE
                 , SKU.STYLE_CD
                 , SKU.COLOR_CD
                 , SKU.SIZE_CD
                 , SKU.SKU_TYPE
                 , PBN.BIZ_TYPE
                 , PBN.BIZ_FLAG
                 , PBN.TAX_FLAG
                 , PBN.PUMBUN_FLAG
                 , PBN.PUMBUN_TYPE
                 , '' AS RUND_FLAG
              FROM DPS.PC_SKUMST    SKU
                 , DPS.PC_PBNMST    PBN
                 , DPS.PC_BARCDMST  BCM
                 , DPS.PC_PMKMST    PMK
             WHERE SKU.PUMBUN_CD = PBN.PUMBUN_CD
               AND SKU.SKU_CD    = BCM.SKU_CD
               AND SKU.PUMMOK_CD    = PMK.PUMMOK_CD
               AND PMK.L_CD LIKE ? 
               AND PMK.M_CD LIKE ?
               AND PMK.S_CD LIKE ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_SKU_CD">
        <![CDATA[
               AND SKU.SKU_CD   = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_LIKE_SKU_CD">
        <![CDATA[
               AND SKU.SKU_CD   LIKE ?||'%'
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_SKU_CD_BARCODE">
        <![CDATA[
               AND BCM.BARCODE   = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_LIKE_SKU_CD_BARCODE">
        <![CDATA[
               AND BCM.BARCODE   LIKE ?||'%'
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_STR_CD_BARCODE">
        <![CDATA[
               AND BCM.STR_CD   = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_STR_CD">
        <![CDATA[
               AND SSM.STR_CD   = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_SKU_NAME">
        <![CDATA[
               AND SKU.SKU_NAME LIKE '%'||?||'%'
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_AUTHORITY">
        <![CDATA[
               AND EXISTS ( SELECT MYORG.USER_ID
                              FROM COM.V_MYORG MYORG
                             WHERE MYORG.PUMBUN_CD   = SKU.PUMBUN_CD
                               AND MYORG.USER_ID     = ?
                               AND MYORG.ORG_FLAG    = ?
                               AND ROWNUM            = 1
                          )
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_AUTHORITY_STR">
        <![CDATA[
               AND EXISTS ( SELECT MYORG.USER_ID
                              FROM COM.V_MYORG MYORG
                             WHERE MYORG.PUMBUN_CD   = SKU.PUMBUN_CD
                               AND MYORG.STR_CD      = ?
                               AND MYORG.USER_ID     = ?
                               AND MYORG.ORG_FLAG    = ?
                               AND ROWNUM            = 1
                          )
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_PUMBUN_CD">
        <![CDATA[
               AND SKU.PUMBUN_CD        = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_PUMBUN_TYPE">
        <![CDATA[
               AND SKU.PUMBUN_TYPE      = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_BIZ_TYPE">
        <![CDATA[
               AND PBN.BIZ_TYPE         = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_USE_YN">
        <![CDATA[
               AND SKU.USE_YN           = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_STR_CD_S">
        <![CDATA[
              AND EXISTS ( SELECT SSM.STR_CD
                             FROM DPS.PC_STRSKUMST SSM
                            WHERE SSM.SKU_CD   =  SKU.SKU_CD
                              AND SSM.STR_CD   =  ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_BUY_DT">
        <![CDATA[
                              AND SSM.BUY_S_DT <= ?
                              AND SSM.BUY_E_DT >= ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_SKU_VEN_CD">
        <![CDATA[
                              AND SSM.VEN_CD    = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_STR_CD_E">
        <![CDATA[
                          )
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_SKU_TYPE">
        <![CDATA[
              AND SKU.SKU_TYPE           = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_WHERE_VEN_CD">
        <![CDATA[
              AND PBN.VEN_CD             = ?
        ]]>
    </query>
    <query name="SEL_BTYPESKUMST_WHERE_STYLE_CD">
        <![CDATA[
              AND SKU.STYLE_CD            = ?
        ]]>
    </query>
    <query name="SEL_BTYPESKUMST_WHERE_COLOR_CD">
        <![CDATA[
              AND SKU.COLOR_CD            = ?
        ]]>
    </query>
    <query name="SEL_BTYPESKUMST_WHERE_SIZE_CD">
        <![CDATA[
              AND SKU.SIZE_CD            = ?
        ]]>
    </query>
    <query name="SEL_STRSKUMST_ORDER">
        <![CDATA[
             ORDER BY SKU.SKU_CD
        ]]>
    </query>
    <query name="SEL_STRSKUMST_ORDER_BARCODE">
        <![CDATA[
             ORDER BY BCM.BARCODE
        ]]>
    </query>
</service>