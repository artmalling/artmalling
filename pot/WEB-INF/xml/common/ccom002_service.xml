 * 개     요  : 단품코드조회(의류단품A) 공통 XML
 -->
<service name="/ccom002.cc">	

    <!-- 코드/명 조회 -->
    <gauce name="H_ATYPESKUMST">
      <column colName="SEL"            colType="TB_STRING"  size="1"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SKU_CD"         colType="TB_STRING"  size="13"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SKU_NAME"       colType="TB_STRING"  size="40"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="RECP_NAME"      colType="TB_STRING"  size="40"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMBUN_CD"      colType="TB_STRING"  size="6"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="STYLE_CD"       colType="TB_STRING"  size="54"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="COLOR_CD"       colType="TB_STRING"  size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SIZE_CD"        colType="TB_STRING"  size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="PUMMOK_CD"      colType="TB_STRING"  size="8"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="SALE_UNIT_CD"   colType="TB_STRING"  size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
      <column colName="CMP_SPEC_CD"    colType="TB_DECIMAL" size="5"  dec="2" keyType="TB_NORMAL"  roundMode="" />
      <column colName="CMP_SPEC_UNIT"  colType="TB_STRING"  size="3"  dec="0" keyType="TB_NORMAL"  roundMode="" />
    </gauce>  
    
    <!-- 단품코드조회(의류단품A) 조회 SQL -->
    <query name="SEL_ATYPESKUMST">
        <![CDATA[                                        
            SELECT 'F'        AS SEL
                 , SKU.SKU_CD
                 , SKU.SKU_NAME
                 , SKU.RECP_NAME
                 , SKU.PUMBUN_CD
                 , SKU.STYLE_CD
                 , SKU.COLOR_CD
                 , SKU.SIZE_CD
                 , SKU.PUMMOK_CD
                 , SKU.SALE_UNIT_CD
                 , SKU.CMP_SPEC_CD
                 , SKU.CMP_SPEC_UNIT
              FROM DPS.PC_SKUMST    SKU
                 , DPS.PC_PBNMST    PBN
             WHERE SKU.PUMBUN_CD  = PBN.PUMBUN_CD
               AND SKU.STYLE_TYPE = '1'
               AND SKU.SKU_TYPE = '3'
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_SKU_CD">
        <![CDATA[
               AND SKU.SKU_CD   = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_LIKE_SKU_CD">
        <![CDATA[
               AND SKU.SKU_CD   LIKE ?||'%'
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_SKU_NAME">
        <![CDATA[
               AND SKU.SKU_NAME LIKE '%'||?||'%'
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_AUTHORITY">
        <![CDATA[
               AND EXISTS ( SELECT MYORG.USER_ID
                              FROM COM.V_MYORG MYORG
                             WHERE MYORG.PUMBUN_CD   = SKU.PUMBUN_CD
                               AND MYORG.USER_ID     = ?
                               AND MYORG.ORG_FLAG    = ?
                               AND ROWNUM            = 1
                          )
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_AUTHORITY_STR">
        <![CDATA[
               AND EXISTS ( SELECT MYORG.USER_ID
                              FROM COM.V_MYORG MYORG
                             WHERE MYORG.PUMBUN_CD   = SKU.PUMBUN_CD
                               AND MYORG.STR_CD      = ?
                               AND MYORG.USER_ID     = ?
                               AND MYORG.ORG_FLAG    = ?
                               AND ROWNUM            = 1
                          )
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_STR_CD_S">
        <![CDATA[
              AND EXISTS ( SELECT SSM.STR_CD
                             FROM DPS.PC_STRSKUMST SSM
                            WHERE SSM.SKU_CD   =  SKU.SKU_CD
                              AND SSM.STR_CD   =  ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_BUY_DT">
        <![CDATA[
                              AND SSM.BUY_S_DT <= ?
                              AND SSM.BUY_E_DT >= ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_STR_CD_E">
        <![CDATA[
                          )
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_PUMBUN_CD">
        <![CDATA[
               AND SKU.PUMBUN_CD        = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_STYLE_CD">
        <![CDATA[
               AND SKU.STYLE_CD         = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_COLOR_CD">
        <![CDATA[
               AND SKU.COLOR_CD          = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_SIZE_CD">
        <![CDATA[
               AND SKU.SIZE_CD          = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_PUMBUN_TYPE">
        <![CDATA[
               AND SKU.PUMBUN_TYPE      = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_BIZ_TYPE">
        <![CDATA[
               AND PBN.BIZ_TYPE         = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_USE_YN">
        <![CDATA[
               AND SKU.USE_YN           = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_WHERE_VEN_CD">
        <![CDATA[
               AND PBN.VEN_CD           = ?
        ]]>
    </query>
    <query name="SEL_ATYPESKUMST_ORDER">
        <![CDATA[
             ORDER BY SKU.SKU_CD
        ]]>
    </query>
</service>