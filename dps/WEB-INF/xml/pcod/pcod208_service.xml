<service name="/pcod208.pc">

    <gauce name="H_SEL_MASTER">
       <column colName="SEL"     	  		colType="TB_STRING"      size="6"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" /> 
       <column colName="STR_CD"    	  		colType="TB_STRING"      size="6"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="PUMBUN_CD"    		colType="TB_STRING"      size="6"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="PUMBUN_NAME"  		colType="TB_STRING"      size="40"       dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="REP_PUMBUN_CD"  	colType="TB_STRING"      size="6"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="REP_PUMBUN_NAME"    colType="TB_STRING"      size="40"       dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="VEN_CD"     		colType="TB_STRING"      size="6"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="VEN_NAME"     		colType="TB_STRING"      size="40"       dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
       <column colName="MG_RATE"     		colType="TB_DECIMAL"     size="40"       dec="2" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>
 
    
    <!-- 쿼리는 전부 대문자 -->
    <!-- 조회 쿼리  -->
    <query name="SEL_BRAND_MST">        
        <![CDATA[
             SELECT
			     SEL
			    ,STR_CD
			    ,PUMBUN_CD
			    ,PUMBUN_NAME
			    ,REP_PUMBUN_CD
			    ,REP_PUMBUN_NAME
			    ,VEN_CD
			    ,VEN_NAME
			    ,MG_RATE
			FROM
			    (SELECT 'F'        AS SEL
			         , SPBN.STR_CD
			         , PBN.PUMBUN_CD
			         , PBN.PUMBUN_NAME
			         , PBN.REP_PUMBUN_CD
			         , (SELECT Z.RECP_NAME FROM DPS.PC_PBNMST Z 
			         		WHERE Z.PUMBUN_CD = PBN.REP_PUMBUN_CD) REP_PUMBUN_NAME
			         , VEN.VEN_CD
			         , VEN.VEN_NAME
			         , (SELECT MIN(NORM_MG_RATE) FROM DPS.PC_MARGINMST X 
			         		WHERE X.STR_CD = SPBN.STR_CD AND X.PUMBUN_CD = SPBN.PUMBUN_CD 
			         		AND TO_CHAR(SYSDATE,'YYYYMMDD') BETWEEN APP_S_DT AND APP_E_DT) MG_RATE
			    FROM DPS.PC_PBNMST   PBN
			       , DPS.PC_VENMST   VEN
			       , DPS.PC_STRPBN   SPBN
			    WHERE PBN.VEN_CD        = VEN.VEN_CD
			        AND SPBN.PUMBUN_CD = PBN.PUMBUN_CD
			        AND SPBN.STR_CD = ?
			        AND PBN.PUMBUN_CD     LIKE ?||'%'
			        AND UPPER(PBN.PUMBUN_NAME)   LIKE UPPER(?||'%')
			        AND VEN.VEN_CD        LIKE ?||'%'
			        AND UPPER(VEN.VEN_NAME)      LIKE UPPER(?||'%')
			        AND PBN.USE_YN = 'Y'
			        AND PBN.PUMBUN_CD IN ( SELECT MYORG.PUMBUN_CD
                                             FROM COM.V_MYORG MYORG
                                            WHERE MYORG.USER_ID     = ?
                                         )
			    )
			ORDER BY VEN_CD,REP_PUMBUN_CD,PUMBUN_CD


        ]]>        
    </query>
  <!-- 점별 행사장 신규 입력  --> 
    <query name="INS_BRDMST">    
        <![CDATA[
            INSERT INTO DPS.PC_BRDMST(  BRAND_CD       
                                        , BRAND_NM     
                                        , REG_DATE           
                                        , REG_ID              
                                        , MOD_DATE
                                        , MOD_ID
                                         )
                                   VALUES((SELECT LPAD( NVL(MAX(TO_NUMBER( BRAND_CD )), 10000) + 1 ,  5, '0')
                                             FROM DPS.PC_BRDMST
                                           )
                                        , ?         
                                        , SYSDATE   
                                        , ?        
                                        , SYSDATE  
                                        , ?                                 
                                         )  
        ]]>                                
    </query>
    <!-- 점별 행사장 수정 입력  -->
    <query name="UPD_BRDMST">
        <![CDATA[
            UPDATE DPS.PC_PBNMST
			    SET REP_PUMBUN_CD = ?, 
			    	MOD_ID = ? , 
			    	MOD_DATE = SYSDATE
			WHERE PUMBUN_CD = ?
        ]]>
    </query> 
    <!-- 삭제  -->
    <query name="DEL_BRDMST">
        <![CDATA[
            UPDATE DPS.PC_PBNMST
			    SET REP_PUMBUN_CD = PUMBUN_CD, 
			    	MOD_ID = ? , 
			    	MOD_DATE = SYSDATE
			WHERE PUMBUN_CD = ?
         ]]>
    </query>
    
    <!-- 브랜드코드 존재 여부 체크 -->
    <query name="SEL_BRDCD_CNT">
        <![CDATA[
            SELECT COUNT(*) AS CNT 
              FROM DPS.PC_PBNMST 
             WHERE BRAND_CD = ?
         ]]>
    </query>
    
