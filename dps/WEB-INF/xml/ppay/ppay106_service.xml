             , C.SMEDI_CHAR_ID
             , COM.FN_GET_USER_NAME(C.SMEDI_CHAR_ID) AS SMEDI_CHAR_NM
             , C.SMEDI_EMAIL
             , C.COMP_NAME AS STR_COMP_NAME
             , C.COMP_NO   AS STR_COMP_NO
             , C.BIZ_CAT   AS STR_BIZ_CAT
             , C.BIZ_STAT  AS STR_BIZ_STAT
             , C.REP_NAME  AS STR_REP_NAME
             , C.ADDR      AS STR_ADDR
             , C.DTL_ADDR  AS STR_DTL_ADDR
		     , COM.FN_GET_HP_NO(?, 1)  AS STR_HP1_NO
		     , COM.FN_GET_HP_NO(?, 2)  AS STR_HP2_NO
		     , COM.FN_GET_HP_NO(?, 3)  AS STR_HP3_NO
		  FROM DPS.PC_STRVENMST A
		     , DPS.PC_VENMST B
		     , DPS.PC_STRMST C
		 WHERE A.VEN_CD = B.VEN_CD
		   AND A.STR_CD = C.STR_CD
		   AND A.STR_CD = ?
		   AND B.VEN_CD = ?
        ]]>
