                         , ''         AS APPR_TIME         -- 승인일시
                         , ''         AS APPR_VANID        -- VAN-ID
                         , ''         AS INPUT_FLAG        -- 원거래승인번호
                         , ''         AS INPUT_TYPE        -- 수기입력구분
			          FROM DPS.PS_DISETC A
			             , DPS.PS_DISHEADER B
			         WHERE A.SALE_DT = B.SALE_DT
			           AND A.STR_CD  = B.STR_CD
			           AND A.POS_NO  = B.POS_NO
			           AND A.TRAN_NO = B.TRAN_NO
			           AND A.STR_CD  = ?
			           AND A.POS_NO  = ?
			           AND A.TRAN_NO = ?
			           AND A.SALE_DT = ?
			    ) A
			    ,(SELECT * FROM COM.TC_COMMCODE
			     WHERE COMM_PART = 'D072'
			     AND   SYS_PART = 'D') B
			WHERE A.DIS_FLAG = B.COMM_CODE
			GROUP BY  A.DIS_FLAG
			         ,B.COMM_NAME1
			         ,B.INQR_ORDER 
                     ,A.CARD_DATA
                     ,A.INSTALLMENT_MONTH
                     ,A.CARD_COMP
                     ,A.APPR_NO
                     ,A.APPR_TIME
                     ,A.APPR_VANID
                     ,A.INPUT_FLAG
                     ,A.INPUT_TYPE
			ORDER BY B.INQR_ORDER



            
        ]]>        
    </query>
    
