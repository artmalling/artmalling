    <!-- 순번발번 -->
    <query name="SEL_SEQ_NO">        
        <![CDATA[
			SELECT NVL(MAX(SEQ_NO), 0) + 1 AS SEQ_NO
			  FROM DPS.PS_SALEETC
			 WHERE STR_CD  = ?
			   AND SALE_DT = ?
