        <column colName="SKU_CD"         colType="TB_STRING"   size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="MODEL_NO"		 colType="TB_STRING"   size="13" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SKU_NAME"		 colType="TB_STRING"   size="50" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SAL_COST_PRC" 	 colType="TB_DECIMAL"  size="15" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SALE_PRC"       colType="TB_DECIMAL"  size="15" dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>
    
    <!-- 엑셀업로드 브랜드명, 품목명, 상품명 쿼리 -->
    <query name="SEL_EXCEL_OLD">        
        <![CDATA[
            SELECT PBN.PUMBUN_CD
           	     , PBN.PUMBUN_NAME
                 , PMK.PUMMOK_CD
                 , PMK.PUMMOK_NAME
                 , PMK.PUMMOK_SRT_CD
                 , SKU.SKU_CD
                 , SKU.MODEL_NO
                 , SKU.SKU_NAME 
             FROM  DPS.PC_PBNMST   PBN /* 품번마스터 */
                 , DPS.PC_STRPBN   SPN /* 점별품번   */ 
                 , DPS.PC_PMKMST   PMK /* 품목마스터 */
                 , DPS.PC_PBNPMK   PPK /* 품번별품목 */
                 , DPS.PC_SKUMST   SKU /* 단품마스터 */
        WHERE PBN.PUMBUN_CD  = SPN.PUMBUN_CD
          AND PBN.PUMBUN_CD  = PPK.PUMBUN_CD
          AND PPK.PUMMOK_CD  = PMK.PUMMOK_CD
          AND  PBN.PUMBUN_CD = SKU.PUMBUN_CD(+)
          AND PBN.USE_YN     = 'Y'
          AND SPN.STR_CD      = ?
          AND PBN.PUMBUN_CD   = ?
          AND PMK.PUMMOK_SRT_CD = ?
          AND (
                     SKU.SKU_CD(+)     = ?
                  OR SKU.MODEL_NO(+)   = ?
                  )
           AND PBN.PUMBUN_TYPE   = '0'
               AND PBN.SKU_FLAG      = '1'
               AND PBN.SKU_TYPE      = '1'
               AND PBN.BIZ_TYPE      = '1'
               AND SKU.USE_YN(+)     = 'Y'
               AND EXISTS ( SELECT SSM.STR_CD
                              FROM DPS.PC_STRSKUMST SSM
                             WHERE SSM.SKU_CD   =  SKU.SKU_CD
                               AND SSM.STR_CD   =  ?
                          )
               AND EXISTS ( SELECT MYORG.USER_ID
                              FROM COM.V_MYORG MYORG
                             WHERE 1=1
                               --AND  MYORG.PUMBUN_CD   = SKU.PUMBUN_CD
                               AND MYORG.STR_CD      = ?
                               AND MYORG.USER_ID     = ?
                               AND MYORG.ORG_FLAG    = ?
                               AND ROWNUM            = 1
                           )
        ]]>        
    </query>
    
    <!-- 엑셀업로드 브랜드명, 품목명, 상품명 쿼리 -->
    <query name="SEL_EXCEL">        
        <![CDATA[
    	    WITH TMPT AS
			(
				SELECT A.STR_CD,A.SKU_CD, B.MODEL_NO, A.PUMBUN_CD 
				  FROM DPS.PC_STRSKUMST A 
				     , DPS.PC_SKUMST B
				WHERE A.STR_CD = ?				--1
				  AND A.SKU_CD = B.SKU_CD
				  AND B.MODEL_NO = ?			--2
			)
			SELECT PBNLST.PUMBUN_CD
	             , PBNLST.PUMBUN_NAME
	             , PBNLST.PUMMOK_CD
	             , PBNLST.PUMMOK_SRT_CD
	             , PBNLST.PUMMOK_NAME
	             , SKULST.SKU_CD
             	 , SKULST.MODEL_NO
             	 , SKULST.SKU_NAME
                 , NVL(SKULST.NORM_COST_PRC,NVL(SKULST.SAL_COST_PRC,0)) SAL_COST_PRC -- 판매원가
                 , NVL(SKULST.NORM_SALE_PRC ,NVL(SKULST.SALE_PRC,0)) SALE_PRC    -- 판매단가
          	  FROM 
             (          
	             SELECT PBN.PUMBUN_CD
	                  , PBN.PUMBUN_NAME
	                  , PMK.PUMMOK_CD
	                  , PMK.PUMMOK_SRT_CD
	                  , PMK.PUMMOK_NAME
	                  , PBN.VEN_CD 
	               FROM DPS.PC_PBNMST   PBN  /*품번마스터 */
	                  , DPS.PC_STRPBN   SPN /* 점별품번*/    
	                  , DPS.PC_PMKMST   PMK /* 품목마스터*/ 
	                  , DPS.PC_PBNPMK   PPK /* 품번별품목*/  
	                  , TMPT TMP
	              WHERE PBN.PUMBUN_CD  = SPN.PUMBUN_CD
	                AND PBN.PUMBUN_CD  = PPK.PUMBUN_CD
	                AND PPK.PUMMOK_CD  = PMK.PUMMOK_CD
	                AND PBN.USE_YN     = 'Y'
	                AND SPN.STR_CD      = TMP.STR_CD
	                AND PBN.PUMBUN_CD   = TMP.PUMBUN_CD
	                AND PBN.PUMBUN_TYPE   = '0'
	                AND PBN.SKU_FLAG      = '1'
	                AND PBN.SKU_TYPE      = '1'
	                AND PBN.BIZ_TYPE      = '1'
           	 ) PBNLST
            ,(
	              SELECT SKU.PUMBUN_CD
	                   , SKU.PUMMOK_CD
	                   , SKU.SKU_CD
	                   , SKU.MODEL_NO
	                   , SKU.SKU_NAME
	                   , SSM.SAL_COST_PRC
	                   , SSM.SALE_PRC
	                   , SPM.NORM_COST_PRC
	                   , SPM.NORM_SALE_PRC
	                FROM DPS.PC_SKUMST   SKU /* 단품마스터 */
	                   , DPS.PC_STRSKUMST SSM /*점별단품마스터*/
	                   , DPS.PC_STRSKUPRCMST SPM /* 점별단품금액이력마스터*/
	                   , TMPT TMP
	               WHERE SKU.PUMBUN_CD = SSM.PUMBUN_CD
	                 AND SKU.SKU_CD = SSM.SKU_CD
	                 AND SKU.SKU_CD = SPM.SKU_CD(+)
	                 AND SSM.STR_CD = SPM.STR_CD
	                 AND ? BETWEEN SPM.APP_S_DT(+) AND SPM.APP_E_DT(+)		--3
	                 AND SKU.PUMBUN_CD   = SSM.PUMBUN_CD
	                 AND SSM.STR_CD        = TMP.STR_CD
			         AND (   SKU.SKU_CD    = TMP.SKU_CD
			                  OR SKU.MODEL_NO  = TMP.MODEL_NO
			             )
            ) SKULST
         WHERE PBNLST.PUMBUN_CD = SKULST.PUMBUN_CD(+)
           AND PBNLST.PUMMOK_CD = SKULST.PUMMOK_CD(+)
           AND EXISTS ( 
	                     SELECT MYORG.USER_ID
	                       FROM COM.V_MYORG MYORG
	                      WHERE 1=1
	                        AND MYORG.PUMBUN_CD   = PBNLST.PUMBUN_CD
	                        AND MYORG.STR_CD      = ?		--4
	                        AND MYORG.USER_ID     = ?		--5
	                        AND MYORG.ORG_FLAG    = ?		--6
	                        AND ROWNUM            = 1
                      ) 
        ]]>        
    </query>
</service>
