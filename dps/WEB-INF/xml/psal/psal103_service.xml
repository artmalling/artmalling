    <!-- 쿼리는 전부 대문자 -->
    <!-- 당초팀별년매출계획 조회 쿼리  -->
    <query name="SEL_PLANTEAMYY">        
        <![CDATA[
            SELECT (CASE WHEN NVL(A.CONF_FLAG, 'N') = 'Y' THEN 'T' ELSE 'F' END) AS CONF_FLAG
                 , A.STR_CD
                 , C.STR_NAME
                 , A.DEPT_CD
                 , A.TEAM_CD
                 , B.ORG_SHORT_NAME      AS ORG_NAME
                 , A.PLAN_YEAR
                 , A.ORIGIN_NORM_SAMT
                 , A.ORIGIN_EVT_SAMT
                 , A.ORIGIN_SALE_TAMT
                 , A.ORIGIN_PROF_TAMT
                 , A.ORIGIN_SALE_CRATE
                 , A.ORIGIN_PROF_CRATE
              FROM DPS.PS_PLANTEAMYY    A
                 , DPS.PC_ORGMST        B
                 , DPS.PC_STRMST        C
             WHERE A.ORG_CD     = B.ORG_CD
               AND A.STR_CD     = B.STR_CD
               AND A.STR_CD     = C.STR_CD
               AND A.STR_CD     = ?
               AND A.DEPT_CD    = ?
               AND A.TEAM_CD    LIKE ? || '%'
               AND B.ORG_FLAG   = ?
               AND B.ORG_LEVEL  = '3'
               AND A.PLAN_YEAR  = ?
               AND EXISTS ( SELECT MYORG.USER_ID
                                FROM COM.V_MYORG MYORG
                               WHERE MYORG.STR_CD      = A.STR_CD
                                 AND MYORG.DEPT_CD     = A.DEPT_CD
                                 AND MYORG.TEAM_CD     = A.TEAM_CD
                                 AND MYORG.USER_ID     = ?
                             )
             ORDER BY 
                   A.STR_CD
                 , A.DEPT_CD
                 , A.TEAM_CD
               
            
        ]]>        
    </query>
    
    <!-- 당초PC별월매출계획 조회 쿼리  -->
    <query name="SEL_PLANTEAM">        
        <![CDATA[
            SELECT A.STR_CD
                 , C.STR_NAME
                 , A.ORG_CD
                 , A.PLAN_YM
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , D.ORG_SHORT_NAME                 AS DEPT_ORG_NAME
                 , A.TEAM_CD
                 , B.ORG_SHORT_NAME                 AS TEAM_ORG_NAME
                 , A.BFYY_NORM_SAMT
                 , A.BFYY_EVT_SAMT
                 , A.BFYY_SALE_TAMT
                 , A.BFYY_PROF_TAMT
                 , A.BFYY_SALE_CRATE
                 , A.BFYY_PROF_CRATE
                 , A.ORIGIN_NORM_SAMT
                 , A.ORIGIN_EVT_SAMT
                 , A.ORIGIN_SALE_TAMT
                 , A.ORIGIN_PROF_TAMT
                 , A.ORIGIN_SALE_CRATE
                 , A.ORIGIN_PROF_CRATE
                 , A.ORIGIN_SALE_IRATE
                 , A.ORIGIN_PROF_IRATE
                 , NVL(A.CONF_FLAG,'N')   AS CONF_FLAG
              FROM DPS.PS_PLANTEAM  A
                 , DPS.PC_ORGMST    B
                 , DPS.PC_STRMST    C
                 , ( SELECT STR_CD
                          , DEPT_CD
                          , ORG_SHORT_NAME
                       FROM DPS.PC_ORGMST
                      WHERE STR_CD    = ?
                        AND DEPT_CD   = ?
                        AND ORG_CD    = ? || ? || '000000') D
             WHERE A.STR_CD    = B.STR_CD
               AND A.STR_CD    = C.STR_CD
               AND A.ORG_CD    = B.ORG_CD
               AND A.STR_CD    = D.STR_CD
               AND A.DEPT_CD   = D.DEPT_CD
               AND A.STR_CD     = ?
               AND A.DEPT_CD    = ?
               AND A.TEAM_CD    = ?
               AND A.PLAN_YM    LIKE ? || '%'
               AND A.ORG_LEVEL  = '3'
               AND B.ORG_FLAG   = ?
               AND EXISTS ( SELECT MYORG.USER_ID
                                FROM COM.V_MYORG MYORG
                               WHERE MYORG.STR_CD      = A.STR_CD
                                 AND MYORG.DEPT_CD     = A.DEPT_CD
                                 AND MYORG.TEAM_CD     = A.TEAM_CD
                                 AND MYORG.USER_ID     = ?
                             )
             ORDER BY 
                   A.STR_CD
                 , A.ORG_CD
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , A.TEAM_CD
                 , A.PLAN_YM
               
            
        ]]>        
    </query>
    
    
    <!-- 당초PC별월매출계획 조회 쿼리  -->
    <query name="SEL_PLANTEAM_BFYY">        
        <![CDATA[
            SELECT A.STR_CD
                 , A.ORG_CD
                 , A.PLAN_YM
                 , A.DEPT_CD
                 , A.TEAM_CD
                 , A.ORIGIN_NORM_SAMT     AS BFYY_NORM_SAMT
                 , A.ORIGIN_EVT_SAMT      AS BFYY_EVT_SAMT
                 , A.ORIGIN_SALE_TAMT     AS BFYY_SALE_TAMT
                 , A.ORIGIN_PROF_TAMT     AS BFYY_PROF_TAMT
                 , A.ORIGIN_SALE_CRATE    AS BFYY_SALE_CRATE
                 , A.ORIGIN_PROF_CRATE    AS BFYY_PROF_CRATE
              FROM DPS.PS_PLANTEAM  A
                 , DPS.PC_ORGMST    B
                 , DPS.PC_STRMST    C
             WHERE A.STR_CD    = B.STR_CD
               AND A.STR_CD    = C.STR_CD
               AND A.ORG_CD    = B.ORG_CD
               AND A.STR_CD     = ?
               AND A.DEPT_CD    = ?
               AND A.TEAM_CD    = ?
               AND A.PLAN_YM    = TO_CHAR(ADD_MONTHS(? || '01',-12),'YYYYMM')
               AND A.ORG_LEVEL  = '3'
               AND B.ORG_FLAG   = ?
               AND EXISTS ( SELECT MYORG.USER_ID
                                FROM COM.V_MYORG MYORG
                               WHERE MYORG.STR_CD      = A.STR_CD
                                 AND MYORG.DEPT_CD     = A.DEPT_CD
                                 AND MYORG.TEAM_CD     = A.TEAM_CD
                                 AND MYORG.USER_ID     = ?
                             )
             ORDER BY 
                   A.STR_CD
                 , A.ORG_CD
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , A.TEAM_CD
                 , A.PLAN_YM
               
            
        ]]>        
    </query>
    
    
    <!-- 당초PC별월매출계획 조회 쿼리  -->
    <query name="SEL_PLANTEAMBFYY">        
        <![CDATA[
            SELECT A.STR_CD
                 , C.STR_NAME
                 , A.ORG_CD
                 , A.PLAN_YM
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , D.ORG_SHORT_NAME                 AS DEPT_ORG_NAME
                 , A.TEAM_CD
                 , B.ORG_SHORT_NAME                 AS TEAM_ORG_NAME
                 , SUM(NVL(A.BFYY_NORM_SAMT,0))     AS BFYY_NORM_SAMT
                 , SUM(NVL(A.BFYY_EVT_SAMT,0))      AS BFYY_EVT_SAMT
                 , SUM(NVL(A.BFYY_SALE_TAMT,0))     AS BFYY_SALE_TAMT
                 , SUM(NVL(A.BFYY_PROF_TAMT,0))     AS BFYY_PROF_TAMT
                 , SUM(NVL(A.BFYY_SALE_CRATE,0))    AS BFYY_SALE_CRATE
                 , SUM(NVL(A.BFYY_PROF_CRATE,0))    AS BFYY_PROF_CRATE
                 , SUM(NVL(A.ORIGIN_NORM_SAMT,0))   AS ORIGIN_NORM_SAMT
                 , SUM(NVL(A.ORIGIN_EVT_SAMT,0))    AS ORIGIN_EVT_SAMT
                 , SUM(NVL(A.ORIGIN_SALE_TAMT,0))   AS ORIGIN_SALE_TAMT
                 , SUM(NVL(A.ORIGIN_PROF_TAMT,0))   AS ORIGIN_PROF_TAMT
                 , SUM(NVL(A.ORIGIN_SALE_CRATE,0))  AS ORIGIN_SALE_CRATE
                 , SUM(NVL(A.ORIGIN_PROF_CRATE,0))  AS ORIGIN_PROF_CRATE
                 , SUM(NVL(A.ORIGIN_SALE_IRATE,0))  AS ORIGIN_SALE_IRATE
                 , SUM(NVL(A.ORIGIN_PROF_IRATE,0))  AS ORIGIN_PROF_IRATE
                 , NVL(A.CONF_FLAG,'N')   AS CONF_FLAG
              FROM (SELECT A.STR_CD
                         , A.ORG_CD
                         , TO_CHAR(ADD_MONTHS(A.PLAN_YM || '01', 12),'YYYYMM')AS PLAN_YM
                         , A.ORG_LEVEL
                         , A.DEPT_CD
                         , A.TEAM_CD
                         , A.ORIGIN_NORM_SAMT       AS BFYY_NORM_SAMT
                         , A.ORIGIN_EVT_SAMT        AS BFYY_EVT_SAMT
                         , A.ORIGIN_SALE_TAMT       AS BFYY_SALE_TAMT
                         , A.ORIGIN_PROF_TAMT       AS BFYY_PROF_TAMT
                         , A.ORIGIN_SALE_CRATE      AS BFYY_SALE_CRATE
                         , A.ORIGIN_PROF_CRATE      AS BFYY_PROF_CRATE
                         , 0                        AS ORIGIN_NORM_SAMT
                         , 0                        AS ORIGIN_EVT_SAMT
                         , 0                        AS ORIGIN_SALE_TAMT
                         , 0                        AS ORIGIN_PROF_TAMT
                         , 0                        AS ORIGIN_SALE_CRATE
                         , 0                        AS ORIGIN_PROF_CRATE
                         , 0                        AS ORIGIN_SALE_IRATE
                         , 0                        AS ORIGIN_PROF_IRATE
                         , ''                       AS CONF_FLAG
                      FROM DPS.PS_PLANTEAM    A
                     WHERE A.STR_CD     = ?
                       AND A.DEPT_CD    = ?
                       AND A.TEAM_CD    = ?
                       AND A.PLAN_YM    LIKE ?-1 || '%'
                       AND A.ORG_LEVEL  = '3'
                       
                       
                     UNION ALL
                     
                    SELECT A.STR_CD
                         , A.ORG_CD
                         , A.PLAN_YM
                         , A.ORG_LEVEL
                         , A.DEPT_CD
                         , A.TEAM_CD
                         , 0                        AS BFYY_NORM_SAMT
                         , 0                        AS BFYY_EVT_SAMT
                         , 0                        AS BFYY_SALE_TAMT
                         , 0                        AS BFYY_PROF_TAMT
                         , 0                        AS BFYY_SALE_CRATE
                         , 0                        AS BFYY_PROF_CRATE
                         , A.ORIGIN_NORM_SAMT
                         , A.ORIGIN_EVT_SAMT
                         , A.ORIGIN_SALE_TAMT
                         , A.ORIGIN_PROF_TAMT
                         , A.ORIGIN_SALE_CRATE
                         , A.ORIGIN_PROF_CRATE
                         , A.ORIGIN_SALE_IRATE
                         , A.ORIGIN_PROF_IRATE
                         , ''                       AS CONF_FLAG
                      FROM DPS.PS_PLANTEAM    A
                     WHERE A.STR_CD     = ?
                       AND A.DEPT_CD    = ?
                       AND A.TEAM_CD    = ?
                       AND A.PLAN_YM    LIKE ? || '%'
                       AND A.ORG_LEVEL  = '3'
                   )                A
                 , DPS.PC_ORGMST    B
                 , DPS.PC_STRMST    C
                 , ( SELECT STR_CD
                          , DEPT_CD
                          , ORG_SHORT_NAME
                       FROM DPS.PC_ORGMST
                      WHERE STR_CD    = ?
                        AND DEPT_CD   = ?
                        AND ORG_CD    = ? || ? || '000000') D
             WHERE A.STR_CD    = B.STR_CD
               AND A.STR_CD    = C.STR_CD
               AND A.ORG_CD    = B.ORG_CD
               AND A.STR_CD    = D.STR_CD
               AND A.DEPT_CD   = D.DEPT_CD
               AND B.ORG_FLAG  = ?
               AND EXISTS ( SELECT MYORG.USER_ID
                                FROM COM.V_MYORG MYORG
                               WHERE MYORG.STR_CD      = A.STR_CD
                                 AND MYORG.DEPT_CD     = A.DEPT_CD
                                 AND MYORG.TEAM_CD     = A.TEAM_CD
                                 AND MYORG.USER_ID     = ?
                             )
             GROUP BY  
                   A.STR_CD
                 , C.STR_NAME
                 , A.ORG_CD
                 , A.PLAN_YM
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , D.ORG_SHORT_NAME
                 , A.TEAM_CD
                 , B.ORG_SHORT_NAME
                 , A.CONF_FLAG
             ORDER BY 
                   A.STR_CD
                 , A.ORG_CD
                 , A.ORG_LEVEL
                 , A.DEPT_CD
                 , A.TEAM_CD
                 , A.PLAN_YM
               
            
        ]]>        
    </query>
    
    
    <!-- 당초팀별년월매출계획 조회 쿼리 
