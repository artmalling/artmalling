        <column colName="SALE_AMT"                colType="TB_DECIMAL"     size="13"       dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="NORM_CNT"                     colType="TB_DECIMAL"     size="7"        dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
