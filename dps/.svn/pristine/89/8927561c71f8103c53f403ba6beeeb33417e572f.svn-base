    <!-- 쿼리는 전부 대문자 -->
    <!-- 협력사 마스터 조회 쿼리  -->
    <query name="SEL_VENMST">        
        <![CDATA[
			SELECT A.VEN_CD
		         , A.VEN_NAME
		         , A.VEN_SHORT_NAME
		         , A.BUY_SALE_FLAG
		         , A.BIZ_TYPE
		         , A.BIZ_FLAG
		         , A.BUY_ACC_VEN_CD
		         , A.SALE_ACC_VEN_CD
		         , A.REP_VEN_CD
		         , B.VEN_NAME AS REP_VEN_NAME
		         , A.COMP_FLAG
		         , A.ETAX_ISSUE_FLAG
		         , A.RVS_ISSUE_FLAG
		         , A.OCOMP_TAX_ID
		         , A.USE_YN
		         , A.BIZ_S_DT
		         , A.BIZ_E_DT
		         , A.COMP_NO
		         , A.CORP_NO
	             , A.COMP_NAME
                 , A.REP_NAME
		         , A.BIZ_STAT
		         , A.BIZ_CAT
		         , A.POST_NO
		         , A.ADDR
		         , A.DTL_ADDR
		         , A.PHONE1_NO
		         , A.PHONE2_NO
		         , A.PHONE3_NO
		         , A.FAX1_NO
		         , A.FAX2_NO
		         , A.FAX3_NO
		         , A.SAP_DEL_FLAG
		         , A.SAP_IF_DATE
			  FROM DPS.PC_VENMST A
			     , DPS.PC_VENMST B
			 WHERE NVL(A.REP_VEN_CD,' ') = B.VEN_CD(+)
			   AND A.COMP_FLAG				  LIKE ? || '%'
			   AND NVL(A.COMP_NO, ' ')		  LIKE ? || '%'
			   AND A.BIZ_TYPE				  LIKE ? || '%'
			   AND A.VEN_CD                   LIKE ? || '%'
			   AND NVL(A.REP_VEN_CD,' ')      LIKE ? || '%'
			   AND A.USE_YN                   LIKE ? || '%'
               AND A.VEN_NAME                 LIKE '%' || ? || '%'
			 ORDER BY
			       A.VEN_CD
                 , A.VEN_NAME
        ]]>        
    </query>

    <!-- 점별협력사정보조회 쿼리  -->            
    <query name="SEL_STRVENMST">
        <![CDATA[
            SELECT B.VEN_CD
                 , A.VEN_NAME
                 , A.VEN_SHORT_NAME
                 , A.BIZ_TYPE
                 , A.BIZ_FLAG
                 , A.STR_CD
                 , A.PAY_CYC
                 
                 , A.PAY_DT_FLAG
                 , A.PAY_WAY
                 , A.TAX_ITG_ISSUE_FLAG
                 , A.PAY_HOLI_FLAG
                 , A.RUND_FLAG          AS ROUND_FLAG
                 , A.POS_CAL_FLAG
                 , A.EDI_YN
                 , A.BANK_CD
                 , A.BANK_ACC_NO
                 , A.ACC_NO_OWN
                 , A.SBNS_CAL_RATE
                 
                 
                 , A.USE_YN
                 , A.BIZ_S_DT
                 , A.BIZ_E_DT
                 , A.MNTN_CHRG_FLAG
                 , A.CARD_FEE_CHRG
                 , A.DZ_SLP_FLAG
                 , A.POS_USEQTY_1
                 , A.POS_DEPOSIT_1
                 , A.POS_USEFEE_1
                 , A.POS_USEQTY_2
                 , A.POS_DEPOSIT_2
                 , A.POS_USEFEE_2
                 , A.POS_USEQTY_3
                 , A.POS_DEPOSIT_3
                 , A.POS_USEFEE_3
                 , A.POS_USEQTY_4
                 , A.POS_DEPOSIT_4
                 , A.POS_USEFEE_4
                 , A.POS_USEQTY_5
                 , A.POS_DEPOSIT_5
                 , A.POS_USEFEE_5
                 
                 , A.ACC_VEN_CD
              FROM DPS.PC_VENMST B
                 , DPS.PC_STRVENMST A
             WHERE A.VEN_CD     = B.VEN_CD
               AND A.VEN_CD     = ?
             ORDER BY
                   B.VEN_CD
                 , A.STR_CD
                 , A.PAY_CYC
               
        ]]>
    </query>
    
    <!-- 협력사담당자정보 조회 쿼리  -->
    <query name="SEL_VENEMP">        
        <![CDATA[
            SELECT B.VEN_CD
                 , B.VEN_NAME
                 , A.SEQ_NO
                 , A.VEN_TASK_FLAG
                 , A.CHAR_NAME
                 , A.PHONE1_NO
                 , A.PHONE2_NO
                 , A.PHONE3_NO
                 , A.HP1_NO
                 , A.HP2_NO
                 , A.HP3_NO
                 , A.EMAIL
                 , A.SMEDI_ID
                 , A.USE_YN
              FROM DPS.PC_VENMST  B
                 , DPS.PC_VENEMP  A
             WHERE A.VEN_CD = B.VEN_CD
               AND A.VEN_CD = ?
             ORDER BY
                   B.VEN_CD
                 , A.SEQ_NO
        ]]>        
    </query>
    
    <!-- 협력사 EDI 담당자 수 조회 쿼리  -->
    <query name="SEL_EDI_VENEMP_CNT">        
        <![CDATA[
            SELECT SUM(CNT)    AS CNT
                 , MAX(EDI_YN) AS EDI_YN
              FROM (SELECT COUNT(*) AS CNT
                         , ''       AS EDI_YN
                      FROM DPS.PC_VENEMP
                     WHERE VEN_CD        = ?
                       AND VEN_TASK_FLAG = '1' /*EDI담당자만*/
                     UNION ALL
                    SELECT NULL                 AS CNT
                         , NVL(MAX(EDI_YN),'N') AS EDI_YN
                      FROM DPS.PC_STRVENMST
                     WHERE VEN_CD        = ?
                   )
        ]]>        
    </query>
    
     
    <!-- 새로운 협력사 코드 조회 쿼리  -->
    <query name="SEL_VEN_NEW_CD">        
        <![CDATA[
             SELECT ?|| SUBSTR('0000' || CAST(SUBSTR(NVL(MAX(SUBSTR(VEN_CD,2,5)),'000000'),1,5)+1 AS VARCHAR2(5)),LENGTH('0000' || CAST(SUBSTR(NVL(MAX(SUBSTR(VEN_CD,2,5)),'000000'),1,5)+1 AS VARCHAR2(5)))-4,5) AS VEN_CD
             FROM DPS.PC_VENMST
             WHERE BIZ_TYPE = ?
        ]]>        
    </query>
    
    <!-- 협력사변경이력 SEQ  조회 쿼리  -->
    <query name="SEL_VEN_SEQNO">        
        <![CDATA[
             SELECT CAST(NVL(MAX(MOD_SEQ),0)+1 AS VARCHAR2(3)) AS MOD_SEQ
             FROM DPS.PC_VENHIST
             WHERE VEN_CD = ?
        ]]>        
    </query>
    
    <!-- 점별협력사변경이력 SEQ  조회 쿼리  -->
    <query name="SEL_STRVEN_SEQNO">        
        <![CDATA[
             SELECT CAST(NVL(MAX(MOD_SEQ),0)+1 AS VARCHAR2(3)) AS MOD_SEQ
             FROM DPS.PC_STRVENHIST
             WHERE VEN_CD = ?
               AND STR_CD = ?
        ]]>        
    </query>
    
    <!-- 사업자정보  조회 쿼리  -->
    <query name="SEL_COMP_INFO">
        <![CDATA[                                        
            SELECT VEN.VEN_CD
                 , VEN.VEN_NAME
                 , VEN.VEN_SHORT_NAME
                 , VEN.COMP_NO
                 , VEN.REP_VEN_CD
                 , VEN.CORP_NO
                 , VEN.COMP_NAME
                 , VEN.BIZ_STAT
                 , VEN.BIZ_CAT
                 , VEN.REP_NAME
                 , VEN.POST_NO
                 , VEN.ADDR
                 , VEN.DTL_ADDR
                 , VEN.PHONE1_NO
                 , VEN.PHONE2_NO
                 , VEN.PHONE3_NO
                 , VEN.FAX1_NO
                 , VEN.FAX2_NO
                 , VEN.FAX3_NO
              FROM DPS.PC_VENMST    VEN
             WHERE VEN.COMP_NO = ?
             ORDER BY VEN.VEN_CD
        ]]>
    </query>
    
    <!-- 협력사  마스터 신규 입력  -->
    <query name="INS_VENMST">        
        <![CDATA[
            INSERT INTO DPS.PC_VENMST    ( 
                                           VEN_CD						        , VEN_NAME
						                 , VEN_SHORT_NAME						, BUY_SALE_FLAG
						                 , BIZ_TYPE						        , BIZ_FLAG
