                         , SUM(NVL(VPD.SALE_TOT_AMT,0))               AS SALE_TOT_AMT
                         , SUM(NVL(VPD.REDU_AMT,0))                   AS REDU_AMT
                         , SUM(NVL(VPD.SALE_AMT,0))                   AS SALE_AMT
