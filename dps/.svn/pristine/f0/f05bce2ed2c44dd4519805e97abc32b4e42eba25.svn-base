                         , SUM(NVL(VPD.PAY_TRG_AMT,0))                AS PAY_TRG_AMT
                         , VPD.PAY_DT
                      FROM DPS.PP_VENPAYDTL VPD
                         , DPS.PC_STRPBN    SPN
                     WHERE VPD.STR_CD    = SPN.STR_CD
                       AND VPD.PUMBUN_CD = SPN.PUMBUN_CD
                       AND SPN.BUY_ORG_CD LIKE ? || ? || ? || ? ||'%' 
                       AND VPD.PAY_YM    = ?
                       AND VPD.PAY_CYC   = ?
                       AND VPD.PAY_CNT   = ?
                       AND VPD.PAY_DT    = ?    
                       AND VPD.BIZ_TYPE  = '3'             /*특정매입에 대해서만*/
                       AND VPD.VEN_CD    LIKE ? || '%'      
                       AND VPD.PUMBUN_CD LIKE ? || '%' 
                       AND EXISTS ( SELECT MYORG.USER_ID
                                      FROM COM.V_MYORG MYORG
                                     WHERE MYORG.STR_CD      = SPN.STR_CD
                                       AND MYORG.PUMBUN_CD   = SPN.PUMBUN_CD
                                       AND MYORG.USER_ID     = ?
                                       AND ROWNUM            = 1
                                       AND MYORG.ORG_FLAG    = ?
                                  )
                     GROUP BY VPD.STR_CD
                         , VPD.VEN_CD
                         , VPD.PUMBUN_CD
                         , VPD.EVENT_FLAG || VPD.EVENT_RATE
                         , VPD.MG_RATE
                         , SPN.BUY_ORG_CD
                         , VPD.PAY_DT
                     ORDER BY VPD.PAY_DT 
                         , VPD.VEN_CD
                         , VPD.PUMBUN_CD
                         , EVENT_FLAG
                         , VPD.MG_RATE
                   ) 
        ]]>
    </query> 
 </service>