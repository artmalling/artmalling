                   )                                          AS SALE_ORG_TEAM_NM    /* 팀 조직명     */
                 , SUBSTR(BUY_ORG_CD,1,8)                    AS SALE_ORG_PC       /* pc 조직코드   */
                 , DPS.FN_GET_ORG_NAME(
                                       SUBSTR(BUY_ORG_CD,1,2)
