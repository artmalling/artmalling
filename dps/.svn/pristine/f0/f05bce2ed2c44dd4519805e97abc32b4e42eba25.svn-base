                         , VPD.PUMBUN_CD
                         , MAX(DPS.FN_GET_PUMBUN_NAME(VPD.PUMBUN_CD)) AS PUMBUN_NM
                         , VPD.EVENT_FLAG || VPD.EVENT_RATE           AS EVENT_FLAG
                         , VPD.MG_RATE
