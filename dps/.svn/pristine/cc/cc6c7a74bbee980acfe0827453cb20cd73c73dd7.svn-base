    <column colName="STR_HP2_NO"         colType="TB_STRING"  size="4"    dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    <column colName="STR_HP3_NO"         colType="TB_STRING"  size="4"    dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
