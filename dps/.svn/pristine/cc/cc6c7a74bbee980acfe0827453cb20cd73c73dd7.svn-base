    <!-- 매출세금계산서 수기접수상세 -공제 (P406 : 끝자리가 2인것) -->
    <gauce name="H_DETAIL"> 
    <column colName="INPUT_DT"             colType="TB_STRING"  size="8"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" /> 
    <column colName="SEQ_NO"             colType="TB_STRING"  size="5"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" /> 
    <column colName="REASON"             colType="TB_STRING"  size="50"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" /> 
    <column colName="VAT_YN"             colType="TB_STRING"  size="40"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    <column colName="SUP_AMT"            colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    <column colName="VAT_AMT"            colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    <column colName="INPUT_AMT"          colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />  
    <column colName="REMARK"             colType="TB_STRING" size="40"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />    
    <column colName="REASON_CD"         colType="TB_STRING"  size="2"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>
    
    <!-- 매출세금계산서 수기접수상세-임대을,특판 (P406 : 30,50)-->
    <gauce name="H_DETAIL2"> 
        <column colName="PUMBUN_CD"            colType="TB_STRING"  size="2"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="PUMBUN_NM"            colType="TB_STRING"  size="40"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="EVENT"                colType="TB_STRING"  size="6"   dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="MG_RATE"              colType="TB_DECIMAL" size="5"   dec="2" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SALE_TOT_AMT"         colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="REDU_AMT"             colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SALE_AMT"             colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="BF_SALE_COMIS_AMT"    colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="SALE_COMIS_AMT"       colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
        <column colName="GAP_SALE_COMMIS_AMT"  colType="TB_DECIMAL" size="13"  dec="0" keyType="TB_NORMAL" roundMode="ROUND" />
    </gauce>
    
    <!--  매출세금계산서 수기접수   리스트  -->
    <query name="SEL_LIST1">
    <![CDATA[
        SELECT
              TAX.STR_CD                                                                   /*점코드*/
            , TAX.TAX_ISSUE_DT                                                             /*세금계산서발행일자*/
            , TAX.TAX_ISSUE_SEQ_NO                                                         /*세금계산서발행순번*/
            , TAX.VEN_CD                                                                   /*협력사코드*/
            , DPS.FN_GET_VENDOR_NAME(TAX.VEN_CD)    AS VEN_NM                              /*협력사명*/
            , TAX.ETAX_NO                                                                  /*전자세금계산서ID*/
            , NVL(SMT.STATE, TAX.ETAX_STAT) AS ETAX_STAT                                   /*전자세금계산서상태*/
            , DECODE(TAX.ETAX_STAT, 'K', COM.FN_GET_COMM_NAME('D', 'P401', 'K')
                                  , COM.FN_GET_COMM_NAME('D', 'P401'
                                  , DPS.FN_GET_TAX_STATE(TAX.EDI_SEQ_NO))) AS ETAX_STAT_NM  /*전자세금계산서상태명*/
            , TAX.EDI_SEQ_NO
            , TAX.TAX_ISSUE_FLAG
         FROM DPS.PP_TAXMST     TAX
            , DPS.PC_STRVENMST  SVM
            , (
               SELECT A.SERIALNUM
                    , A.PUBLICDATE
                    , A.STATE 
                 FROM IFS.TSMILETAX A
                WHERE A.SERIALNUM LIKE ?||'%'
                  AND A.PUBLICDATE BETWEEN ? AND ?
                  
    ]]>
    </query> 
                  
    <query name="SEL_LIST2">
    <![CDATA[
              ) SMT
        WHERE TAX.STR_CD                = ?
          AND TAX.PAY_YM                = ?
          AND TAX.PAY_CYC               = ?
          AND TAX.PAY_CNT               = ?
          AND TAX.BIZ_TYPE              LIKE ? || '%'
          AND TAX.TAX_FLAG              LIKE ? || '%'
          AND NVL(TAX.EDI_SEQ_NO,' ')   LIKE ? || '%'
          AND TAX.VEN_CD                LIKE ? || '%'
          AND TAX.TAX_INV_FLAG          = '2'         /* 세금계산서구분 : 2(매출) */
          AND TAX.TAX_ISSUE_DT          BETWEEN ? AND ?
          AND TAX.STR_CD                = SVM.STR_CD
          AND TAX.VEN_CD                = SVM.VEN_CD
          AND SMT.SERIALNUM(+)          = TAX.EDI_SEQ_NO
          
        
        
    ]]>
    </query> 
    
    <query name="WHERE_ETAX_STAT1">
        <![CDATA[
            AND A.STATE        = 'K'
        ]]>
    </query> 
    
    <query name="WHERE_ETAX_STAT2">
        <![CDATA[
             AND TAX.ETAX_STAT  = 'K'
        ]]>
    </query> 
   
   <query name="WHERE_ETAX_STAT3">
        <![CDATA[
            AND A.STATE         <> 'K'
        ]]>
    </query> 
    
    <query name="WHERE_ETAX_STAT4">
        <![CDATA[
             AND TAX.ETAX_STAT  <> 'K'
        ]]>
    </query> 

    <!--  매출세금계산서 수기접수 마스터  리스트  -->
    <query name="SEL_MASTER">
        <![CDATA[
        SELECT
              TAX.STR_CD                                                                /*점코드*/
            , TAX.TAX_ISSUE_DT                                                          /*세금계산서발행일자*/
            , TAX.TAX_ISSUE_SEQ_NO                                                      /*세금계산서발행순번*/
            , TAX.VEN_CD                                                                /*협력사코드*/
            , DPS.FN_GET_VENDOR_NAME(TAX.VEN_CD)    AS VEN_NM                           /*협력사명*/
           
            , TAX.ETAX_NO                                                               /*전자세금계산서ID*/
            , TAX.ETAX_STAT                                                             /*전자세금계산서상태*/
            , COM.FN_GET_COMM_NAME('D', 'P401', TAX.ETAX_STAT)    AS ETAX_STAT_NM       /*전자세금계산서상태명*/
            , TAX.PAY_YM                                                                /*지불년월*/
            , TAX.PAY_CYC                                                               /*지불주기*/
           
            , TAX.PAY_CNT                                                               /*지불회차*/
            , TAX.BIZ_TYPE                                                              /*거래형태*/
            , COM.FN_GET_COMM_NAME('D', 'P002', TAX.BIZ_TYPE) AS BIZ_TYPE_NM            /*거래형태명*/
            , TAX.TAX_FLAG                                                              /*과세구분*/
            , COM.FN_GET_COMM_NAME('D', 'P004', TAX.TAX_FLAG) AS TAX_FLAG_NM            /*과세구분명*/
           
            , TAX.VEN_COMP_NO                                                           /*사업자번호*/
            , TAX.VEN_REP_NAME                                                          /*대표자명*/
            , TAX.VEN_HP1_NO || '-' || TAX.VEN_HP2_NO || '-' ||TAX.VEN_HP3_NO AS PHONENUM   /*전화번호*/
            , TAX.VEN_BIZ_STAT AS BIZ_STAT                                                  /*업태*/
            , TAX.VEN_BIZ_CAT AS BIZ_CAT                                                    /*종목*/
           
            , TAX.VEN_ADDR || ' ' || TAX.VEN_DTL_ADDR       AS ADDRESS                      /*주소*/
            , TAX.TAX_INV_FLAG                                                          /*계산서구분*/
            , COM.FN_GET_COMM_NAME('D', 'P403', TAX.TAX_INV_FLAG) AS TAX_INV_FLAG_NM    /*계산서구분명*/
            , TAX.TAX_INV_TYPE                                                          /*세금계산서종류*/
            , COM.FN_GET_COMM_NAME('D', 'P404', TAX.TAX_INV_TYPE) AS TAX_INV_TYPE_NM    /*세금계산서종류명*/
           
            , TAX.RVS_ISSUE_FLAG                                                        /*역발행구분*/
            , COM.FN_GET_COMM_NAME('D', 'P037', TAX.RVS_ISSUE_FLAG) AS RVS_ISSUE_FLAG_NM  /*역발행구분명*/
            , SVM.PAY_WAY                                                               /*지불방법*/
            , COM.FN_GET_COMM_NAME('D', 'P049', SVM.PAY_WAY) AS PAY_WAY_NM              /*지불방법명*/
            , TAX.CHARGE_FLAG                                                           /*청구영수구분*/
           
            , COM.FN_GET_COMM_NAME('D', 'P405', TAX.CHARGE_FLAG) AS CHARGE_FLAG_NM      /*청구영수구분명*/
            , TAX.SUP_AMT                                                               /*공급액*/
            , TAX.VAT_AMT                                                               /*부가세액*/
            , TAX.TOT_AMT                                                               /*합계금액*/
            , TAX.REMARK                                                                /*비고*/
           
            , TAX.STR_CHAR_ID                                                           /*점담당자ID*/    
            , TAX.STR_CHAR_NAME                                                         /*점담당자명*/
            , TAX.STR_CHAR_EMAIL                                                        /*점담당자메일*/
            , TAX.VEN_CHAR_NAME                                                         /*협력사담당자명*/
            , TAX.VEN_CHAR_EMAIL                                                        /*협력사담당자이메일*/

            , TAX.VEN_HP1_NO                                                            /*협력사담당자핸드폰1*/                               
            , TAX.VEN_HP2_NO                                                            /*협력사담당자핸드폰2*/
            , TAX.VEN_HP3_NO                                                            /*협력사담당자핸드폰3*/
            , TAX.VEN_SMEDI_ID                                                          /*협력사스마일EDI*/        
            , TAX.STR_COMP_NAME                                                         /*점상호*/      
            
            , TAX.STR_COMP_NO                                                           /*점사업자번호*/        
            , TAX.STR_BIZ_CAT                                                           /*점업종*/       
            , TAX.STR_BIZ_STAT                                                          /*점업태*/       
            , TAX.STR_REP_NAME                                                          /*점대표자명*/       
            , TAX.STR_ADDR                                                              /*점주소*/     
            
            , TAX.STR_DTL_ADDR                                                          /*점상세주소*/      
            , TAX.STR_HP1_NO                                                            /*점담당자핸드폰1*/      
            , TAX.STR_HP2_NO                                                            /*점담당자핸드폰2*/      
            , TAX.STR_HP3_NO                                                            /*점담당자핸드폰3*/               
            , TAX.CANCEL_YN                                                             /*취소유무*/      
            
            , TAX.EMAIL_RESEND_FLAG                                                     /*이메일재전송여부*/   
            , TAX.NTS_SEND_YN                                                           /*국세청전송요청여부*/   
            , TAX.STATE_FLAG                                                            /*상태구분*/   
            , TAX.EDI_SEQ_NO                                                            /* 세금계산서ID */
            , TAX.TAX_ITEM_DT                                                           /*세금계산서 상품일자*/

            , TAX.TAX_ITEM_NM                                                           /*세금계산서 상품*/
            , TAX.TAX_ITEM_SPEC                                                         /*세금계산서 상품규격*/
            , TAX.TAX_ITEM_QTY                                                          /*세금계산서 상품수량*/
            , TAX.TAX_ITEM_UNIT_AMT                                                     /*세금계산서 상품단가*/
            , TAX.TAX_ITEM_SUP_AMT                                                      /*세금계산서 상품공급가*/

            , TAX.TAX_ITEM_VAT_AMT                                                      /*세금계산서 상품부가세*/
            , (TAX.TAX_ITEM_SUP_AMT+TAX.TAX_ITEM_VAT_AMT) AS TAX_ITEM_TOT_AMT           /*세금계산서 상품합계*/
            , TAX.TAX_ITEM_REMARK                                                       /*세금계산서 상품비고*/
         FROM DPS.PP_TAXMST     TAX
            , DPS.PC_STRVENMST  SVM
        WHERE TAX.STR_CD            = SVM.STR_CD
          AND TAX.VEN_CD             = SVM.VEN_CD
          AND TAX.STR_CD            = ?
          AND TAX.TAX_ISSUE_DT      = ? 
          AND TAX.TAX_ISSUE_SEQ_NO  = ?
        ]]>
    </query> 
    
    <!--  매출세금계산서 수기접수 디테일  리스트  -->
    <query name="SEL_DETAIL1">
        <![CDATA[
        SELECT INPUT_DT                   AS INPUT_DT                         /* 공제일자 */    
		     , SEQ_NO
		     , COM.FN_GET_COMM_NAME('D', 'P412', REASON_CD) AS REASON         /* 공제코드 */
		     , COM.FN_GET_COMM_NAME('D', 'P417', VAT_YN) AS VAT_YN 
		     , SUM(SUP_AMT)             AS SUP_AMT                            /* 공급액   */
		     , SUM(VAT_AMT)             AS VAT_AMT                            /* 부가세   */
		     , SUM(INPUT_AMT)           AS INPUT_AMT                          /* 공제금액 */
		     , MAX(REMARK)              AS REMARK
		     , REASON_CD
		 FROM DPS.PP_PREDEFDED
		WHERE STR_CD            = ?
		  AND TAX_ISSUE_DT      = ?
		  AND TAX_ISSUE_SEQ_NO  = ?
		GROUP BY REASON_CD
		       , INPUT_DT
		       , SEQ_NO
		       , VAT_YN
		ORDER BY INPUT_DT
		       , SEQ_NO
		       , REASON_CD
		       , VAT_YN
                   
        ]]>
    </query> 
    
    <!--  매출세금계산서 수기접수 디테일  리스트  -->
    <query name="SEL_DETAIL2">
        <![CDATA[
        SELECT 
               PUMBUN_CD                                                 /* 품번코드 */
             , DPS.FN_GET_PUMBUN_NAME(PUMBUN_CD) AS PUMBUN_NM            /* 품번명 */
             , EVENT_FLAG || EVENT_RATE          AS EVENT                  /* 행사구분 */
             , MAX(MG_RATE)                      AS MG_RATE                /* 마진율 */
             , SUM(SALE_TOT_AMT)                 AS SALE_TOT_AMT           /* 총매출 */
             , SUM(REDU_AMT)                     AS REDU_AMT               /* 할인 */
             , SUM(SALE_AMT)                     AS SALE_AMT               /* 매출 */
             , SUM(BF_SALE_COMIS_AMT)            AS BF_SALE_COMIS_AMT      /* 매출수수료(매출) */
             , SUM(SALE_COMIS_AMT)               AS SALE_COMIS_AMT         /* 매출수수료(산출) */
             , SUM(GAP_SALE_COMMIS_AMT)          AS GAP_SALE_COMMIS_AMT    /* 차이매출수수료 */
          FROM DPS.PP_VENPAYDTL
         WHERE STR_CD           = ?
           AND TAX_ISSUE_DT     = ?
           AND TAX_ISSUE_SEQ_NO = ?
         GROUP BY  PUMBUN_CD
                 , EVENT_FLAG || EVENT_RATE
                   
        ]]>
    </query> 
    
    <!-- 세금계산서 수기접수처리 저장 -->
    <query name="UPD_MASTER">
        <![CDATA[
            UPDATE DPS.PP_TAXMST
              SET ETAX_STAT        = ?                        /* 세금계산서상태 */
                , ETAX_NO          = ?                        /* 세금계산서 ID */
                , TAX_ITEM_VAT_AMT = ?                        /* 세금계산서 상품부가세 */
                , VAT_AMT          = ?                        /*부가세액*/
                , TOT_AMT          = ?                        /*합계금액*/
                , MOD_DATE         = SYSDATE                  /* 수정일시 */
                , MOD_ID           = ?                        /* 수정자 */ 
            WHERE STR_CD           = ?
              AND TAX_ISSUE_DT     = ?
              AND TAX_ISSUE_SEQ_NO = ?
              AND VEN_CD           = ?
        ]]>
    </query>
    
 </service>