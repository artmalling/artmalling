    <!-- OFFER SHEET 디테일 조회 -->
    <query name="SEL_DETAIL">
        <![CDATA[			
			SELECT 'F'                         AS CHECK1  
			     , G.STR_CD                    AS STR_CD
			     , G.OFFER_YM                  AS OFFER_YM
			     , G.OFFER_SEQ_NO              AS OFFER_SEQ_NO
			     , G.OFFER_DTL_SEQ_NO
			     , G.SKU_CD                    AS SKU_CD
			     , H.SKU_NAME                  AS SKU_NM     
			     , G.ORD_UNIT_CD     
			     , I.MODEL_NO           
			     , I.STYLE_CD
			     , I.COLOR_CD
			     , I.SIZE_CD
			     , G.ORDER_SHEET_NO            AS ORDER_NO
			     , G.OFFER_QTY                 AS OFFER_QTY
			     , F.INVOICE_QTY               AS INVOICE_QTY
			     , F.CHK_QTY                   AS CHK_QTY
			     , G.OFFER_QTY - F.CHK_QTY     AS NOT_IN_QTY
			     , G.OFFER_UNIT_AMT      
                 , G.OFFER_AMT           
                 , G.ORDER_YM       
                 , G.ORDER_SEQ_NO     
                 , G.SKU_CD || G.ORDER_SHEET_NO AS CHECKVALUE  
                 , F.OFFER_SEQ_NO               AS CHECKVALUE2  
			  FROM DPS.PO_OFFDTL G
			     , DPS.PC_STRSKUMST H
			     , DPS.PC_SKUMST I
			     , (SELECT D.STR_CD                     AS STR_CD
			             , D.OFFER_YM                   AS OFFER_YM
			             , D.OFFER_SEQ_NO               AS OFFER_SEQ_NO
			             , E.SKU_CD                     AS SKU_CD
			             , SUM(NVL(E.INVOICE_QTY,0))    AS INVOICE_QTY
			             , SUM(NVL(C.CHK_QTY,0))        AS CHK_QTY
			          FROM DPS.PO_INVMST D
			             , DPS.PO_INVDTL E
			             , (SELECT A.STR_CD               AS STR_CD
			                     , A.INVOICE_YM           AS INVOICE_YM
			                     , A.INVOICE_SEQ_NO       AS INVOICE_SEQ_NO
			                     , B.SKU_CD               AS SKU_CD
			                     , SUM(NVL(B.CHK_QTY,0))  AS CHK_QTY
			                  FROM DPS.PO_SLPMST A
			                     , DPS.PO_SLPDTL B
			                 WHERE A.STR_CD         = ?
			                   AND A.SLIP_PROC_STAT = '09'
			                   AND B.STR_CD         = A.STR_CD
			                   AND B.SLIP_NO        = A.SLIP_NO
			                 GROUP BY A.STR_CD
			                        , A.INVOICE_YM
			                        , A.INVOICE_SEQ_NO
			                        , B.SKU_CD
			               ) C 
			         WHERE D.STR_CD             = ?
			           AND E.STR_CD             = D.STR_CD
			           AND E.INVOICE_YM         = D.INVOICE_YM
			           AND E.INVOICE_SEQ_NO     = D.INVOICE_SEQ_NO
			           AND C.STR_CD         (+) = E.STR_CD
			           AND C.INVOICE_YM     (+) = E.INVOICE_YM
			           AND C.INVOICE_SEQ_NO (+) = E.INVOICE_SEQ_NO
			           AND C.SKU_CD         (+) = E.SKU_CD
			         GROUP BY D.STR_CD
			                , D.OFFER_YM
			                , D.OFFER_SEQ_NO
			                , E.SKU_CD
			       ) F
			 WHERE G.STR_CD           = ?
			   AND G.OFFER_YM         = ?
			   AND G.OFFER_SEQ_NO     = ?
			   AND H.STR_CD           = G.STR_CD
			   AND H.SKU_CD           = G.SKU_CD
			   AND I.SKU_CD           = G.SKU_CD
			   AND F.STR_CD       (+) = G.STR_CD
			   AND F.OFFER_YM     (+) = G.OFFER_YM
			   AND F.OFFER_SEQ_NO (+) = G.OFFER_SEQ_NO
			   AND F.SKU_CD       (+) = G.SKU_CD
        ]]>
    </query>  
    
    
