    <!-- ORDER NO POPUP SQL -->
    <query name="SEL_ORDER_INFO">
        <![CDATA[                                        
            SELECT A.STR_CD
                 , DPS.FN_GET_STORE_NAME(A.STR_CD)                      AS STR_NM
                 , A.ORDER_YM
                 , A.ORDER_SEQ_NO
                 , A.ORDER_DT
                 , B.STR_CD || B.ORDER_YM || LPAD(B.ORDER_SEQ_NO, 5, 0) AS ORDER_NO
                 , A.ORDER_TOT_QTY
                 , A.ORDER_TOT_AMT
                 , B.SKU_CD
                 , B.ORDER_QTY
                 , B.ORDER_UNIT_AMT
              FROM DPS.PO_ORDMST    A
                 , DPS.PO_ORDDTL    B
             WHERE A.STR_CD = B.STR_CD
               AND A.ORDER_YM = B.ORDER_YM
               AND A.ORDER_SEQ_NO = B.ORDER_SEQ_NO
               AND A.STR_CD = ?
               AND B.SKU_CD = ?
               AND A.ORDER_DT BETWEEN ? AND ?
               AND B.STR_CD || B.ORDER_YM || LPAD(B.ORDER_SEQ_NO, 5, 0) LIKE ? || '%'
        ]]>
