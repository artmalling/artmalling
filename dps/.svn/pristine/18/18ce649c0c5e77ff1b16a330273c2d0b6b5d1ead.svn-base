    <!-- OFFER_NO 삭제판단여부-->
    <query name="CHK_TREATMENT_OFF_NO">
        <![CDATA[
            SELECT C.OFFER_SEQ_NO                                       AS CHECKVALUE
                 , A.CLOSE_FLAG
              FROM DPS.PO_OFFMST A
                 , (
                    SELECT X.STR_CD
                         , X.OFFER_YM
                         , X.OFFER_SEQ_NO
                      FROM (
                            SELECT MAX(A.STR_CD)            AS STR_CD
                                 , MAX(A.OFFER_YM)          AS OFFER_YM
                                 , MAX(A.OFFER_SEQ_NO)      AS OFFER_SEQ_NO
                              FROM DPS.PO_OFFMST A
                                 , DPS.PO_INVMST B
                             WHERE A.STR_CD         = ?
                               AND A.OFFER_YM       = ?
                               AND A.OFFER_SEQ_NO   = ?
                               AND A.STR_CD         = B.STR_CD
                               AND A.OFFER_YM       = B.OFFER_YM
                               AND A.OFFER_SEQ_NO   = B.OFFER_SEQ_NO
                            UNION ALL
                            SELECT MAX(A.STR_CD)            AS STR_CD
                                 , MAX(A.OFFER_YM)          AS OFFER_YM
                                 , MAX(A.OFFER_SEQ_NO)      AS OFFER_SEQ_NO
                              FROM DPS.PO_OFFMST A
                                 , DPS.PO_EXPNCM B
                             WHERE A.STR_CD         = ?
                               AND A.OFFER_YM       = ?
                               AND A.OFFER_SEQ_NO   = ?
                               AND A.STR_CD         = B.STR_CD
                               AND A.OFFER_YM       = B.OFFER_YM
                               AND A.OFFER_SEQ_NO   = B.OFFER_SEQ_NO
                           ) X
                     GROUP BY X.STR_CD
                            , X.OFFER_YM
                            , X.OFFER_SEQ_NO
                   ) C
             WHERE A.STR_CD        = ?
               AND A.OFFER_YM      = ?
               AND A.OFFER_SEQ_NO  = ?
               AND A.STR_CD        = C.STR_CD(+)
               AND A.OFFER_YM      = C.OFFER_YM(+)
               AND A.OFFER_SEQ_NO  = C.OFFER_SEQ_NO(+)
        ]]>
    </query> 

