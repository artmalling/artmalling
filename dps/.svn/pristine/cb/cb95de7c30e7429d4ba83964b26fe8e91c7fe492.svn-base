components {
	font-size:12;
	font-family:굴림;
}

mxcombo {
	xpstyle:true;
}

mxfilecontrol {}

mxgrid {
	borderstyle:0;
	edgellinecolor:#ffffff;
	headborder:0;
	indwidth:0;
	linecolor:#ffffff;
	border-style:solid;
	border-width:1;
	border-color:#7f9db9;
	/*sortview:right;*/
}

	mxgrid column {
		headbgcolor:#4f81bd;
		headcolor:#ffffff;
		headfontstyle:bold;
		bgcolor:{decode(currow-tointeger(currow/2)*2,0,\'#e9edf4\',1,\'#ffffff\')};
		sumbgcolor:#ffff00;
		sumcolor:black;
		/*sort:true;*/
	}
	
	mxgrid selectioncolor focuscurrow {
		textcolor:#000000;
		bgcolor:#babef6;
	}

mxmaskedit {
	border:false;
	numeric:false;
	border-style:solid;
	border-width:1;
	border-color:#7f9db9;
}

mxmenu {}

mxmgrid {
	border-style:solid;
	border-width:1;
	border-color:#7f9db9;
}
	mxmgrid backgroundinfo {
		borderstyle:none;
	}
	
	mxmgrid indicatorinfo {
		width:0;
	}
	
	mxmgrid column header {
		fontstyle:bold;
		bgcolor:#4f81bd;
		color:#ffffff;
	}
	
	mxmgrid column view {
		bordercolor:#ffffff;
		bgcolor:@if(currec%2=0,[#e9edf4],[#ffffff]);
	}

mxradio {}

mxtab {
	textcolor:#ffffff;
	backcolor:#4f81bd;
	disabletextcolor:#000000;
	disablebackcolor:#e9edf4;
}

mxtree {
	borderstyle:0;
	border-style:solid;
	border-width:1;
	border-color:#7f9db9;
}

mxtextarea {
	border-style:solid;
	border-width:1;
	border-color:#7f9db9;
}

