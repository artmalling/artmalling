div {
	margin-bottom : 10px;
}
div#pageTitle {
	border-left : 6px solid #034D98;
	background-color : #F4F4F4;
	padding : 3px;
	padding-left : 5px;
	font-weight : bold;
	margin-bottom : 17px;
}
div.description {
	font-size : 9pt;
}
span.help {
	font-size : 7pt;
	color : blue;
	cursor : hand;
}
span.help .helptext {
	display : none;
}

#tooltip_div{
	z-index : 1000000;
	text-align : left;
}
#tooltip_div div{
	position : relative;
}
#tooltip_div .tooltip_div_left{	
	background-image : url('tooltip_left_arrow.gif');
	width : 20px;
	position : absolute;
	left : 0px;
	top : 0px;
	background-repeat : no-repeat;
	background-position : center left;
	z-index : 1000005;
	height : 60px;
}
#tooltip_div .tooltip_div_content{
	border : 2px solid #317082;
	left : 18px;
	top : 0px;
	position : absolute;
	width : 200px;
	height : 100px;
	background-color : #FFF;
	padding : 5px;
	font-size : 9pt;
	font-family : verdana;
	overflow : auto;
	z-index : 1000001;
}
